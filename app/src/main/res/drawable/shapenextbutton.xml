            <corners android:radius="5dp" />  
  
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp" />  
        </shape></item>  
    <item><shape>  
            <stroke android:width="0.5dp" />  
  
            <solid android:color="#10b1fd" />  
  

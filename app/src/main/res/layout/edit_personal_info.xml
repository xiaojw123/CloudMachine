<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    android:orientation="vertical"
    >
    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    

    <com.cloudmachine.utils.widgets.ClearEditTextView
        android:id="@+id/info_ed"
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:layout_marginTop="46px"
        android:hint=""
        android:padding="10dp"
        android:textColor="@color/public_black"
        android:textSize="@dimen/public_textsize1" 
        android:background="@color/public_white"
        
        />


    

</LinearLayout>
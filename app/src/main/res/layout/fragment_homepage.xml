<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height"
        android:background="@color/public_blue_bg"
        >

        <Button
            android:visibility="gone"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/public_blue_bg"
            android:text="消息"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/sign"
            />
        <View
            android:id="@+id/hp_message_oval"
            android:layout_width="@dimen/oval_message_size"
            android:layout_height="@dimen/oval_message_size"
            android:background="@drawable/oval_message"
            android:layout_above="@+id/iv_message"
            android:layout_toRightOf="@+id/iv_message"
            android:layout_marginBottom="-8dp"
            android:layout_marginLeft="-18dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"/>

    </android.support.v4.widget.SwipeRefreshLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6f6f9"
    android:orientation="vertical">

    <com.cloudmachine.widget.CommonTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title_name="@string/my_qrcode"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_360"
        android:layout_marginTop="@dimen/dimen_size_6"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="@dimen/dimen_size_177"
            android:layout_height="@dimen/dimen_size_177"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_size_74"
            />
        <TextView
            android:id="@+id/leftime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_45"
            android:textColor="@color/cor8"
            android:textSize="@dimen/siz5"
            />
    </LinearLayout>

</LinearLayout>
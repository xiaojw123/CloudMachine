<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    android:fitsSystemWindows="true"
    android:clipToPadding="false" >

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/view_bottom_tab"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/tab_homepage_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/tab_homepage_image"
                android:layout_width="@dimen/main_bar_image_width_1"
                android:layout_height="@dimen/main_bar_image_height"
                android:layout_marginTop="@dimen/main_bar_image_padding"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_btn_main_tab_one" />

            <TextView
                android:id="@+id/tab_homepage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/main_bar_image_padding"
                android:text="首页"
                android:textColor="@color/main_bar_text_dw"
                android:textSize="@dimen/main_bar_text_size" 
                android:layout_alignLeft="@id/tab_homepage_image"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tab_device_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/two_r_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    >

                    <ImageView
                        android:id="@+id/tab_device_image"
                        android:background="@drawable/bg_btn_main_tab_two" 
                        style="@style/main_bar_image"
                        />

                    <TextView
                        android:id="@+id/tab_device_text"
                        android:text="设备"
                        style="@style/main_bar_text"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/two_r_layout"
                    android:background="@drawable/tips_new" />

                <com.cloudmachine.utils.widgets.RadiusButtonView
                    android:id="@+id/question_text"
                    android:layout_width="@dimen/main_bar_score_width"
                    android:layout_height="@dimen/main_bar_score_height"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/two_r_layout"
                    android:visibility="gone"
                    cloudm:rbtn_fillColor_dw="@color/mc_rad_but_dw_1"
                    cloudm:rbtn_fillColor_nm="@color/transparent"
                    cloudm:rbtn_roundRadius="15dp"
                    cloudm:rbtn_strokeColor="@color/main_bar_score_text"
                    cloudm:rbtn_text="问卷"
                    cloudm:rbtn_textColor="@color/main_bar_score_text"
                    cloudm:rbtn_textSize="@dimen/main_bar_score_text_size" >
                </com.cloudmachine.utils.widgets.RadiusButtonView>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tab_question_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:id="@+id/three_r_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:id="@+id/tab_question_iamge"
                    style="@style/main_bar_image"
                    android:background="@drawable/bg_btn_main_tab_four" />

                <TextView
                    android:id="@+id/tab_question_text"
                    android:text="我要提问"
                        style="@style/main_bar_text"/>
            </RelativeLayout>

            <com.cloudmachine.utils.widgets.RadiusButtonView
                android:id="@+id/sign_text"
                android:layout_width="@dimen/main_bar_score_width"
                android:layout_height="@dimen/main_bar_score_height"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/three_r_layout"
                android:visibility="gone"
                cloudm:rbtn_fillColor_dw="@color/mc_rad_but_dw_1"
                cloudm:rbtn_fillColor_nm="@color/transparent"
                cloudm:rbtn_roundRadius="15dp"
                cloudm:rbtn_strokeColor="@color/main_bar_score_text"
                cloudm:rbtn_text="签到"
                cloudm:rbtn_textColor="@color/main_bar_score_text"
                cloudm:rbtn_textSize="@dimen/main_bar_score_text_size" >
            </com.cloudmachine.utils.widgets.RadiusButtonView>
        </RelativeLayout>

        <!-- 添加一个报修的选项，增加了长按钮，没有设置id备用 -->

        <RelativeLayout
            android:id="@+id/tab_repair_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >


            <ImageView
                android:id="@+id/tab_repair_iamge"
                style="@style/main_bar_image"
                android:background="@drawable/bg_btn_main_tab_three" />

            <TextView
                android:id="@+id/tab_repair_text"
                android:text="@string/main_bar_text3"
                style="@style/main_bar_text"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_personal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >


            <ImageView
                android:id="@+id/tab_personal_iamge"
                style="@style/main_bar_image"
                android:background="@drawable/bg_btn_main_tab_three" />

            <TextView
                android:id="@+id/tab_personal_text"
                android:text="我的"
                style="@style/main_bar_text"/>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar" >
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/g_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_transparent_50"
        android:orientation="vertical"
        android:paddingTop="@dimen/public_title_height"
        >
        <ImageView 
            android:layout_width="@dimen/main_g_iamge1_width"
        	android:layout_height="@dimen/main_g_iamge1_height"
        	android:background="@drawable/main_g_image"
        	android:layout_marginTop="@dimen/main_g_iamge1_marginTop"
        	android:layout_marginLeft="@dimen/main_g_iamge1_marginLeft"
            />
        <ImageView 
            android:id="@+id/main_guide_image"
            android:layout_width="@dimen/main_g_iamge2_width"
        	android:layout_height="@dimen/main_g_iamge2_height"
        	android:background="@drawable/bg_btn_main_guide"
        	android:layout_marginTop="@dimen/main_g_iamge2_marginTop"
        	android:layout_marginLeft="@dimen/main_g_iamge2_marginLeft"
            />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <View
        android:id="@+id/home_pop_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    <com.cloudmachine.widget.RoundImageView
        android:id="@+id/pop_ad_img"
        android:layout_width="267dp"
        android:layout_height="358dp"
        android:layout_marginTop="118dp"
        android:scaleType="fitXY"
        app:rectRoundRadius="@dimen/dimen_size_2"
        app:type="rounded_rect"
        />

    <ImageView
        android:id="@+id/pop_ad_close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_80"
        android:src="@drawable/icon_close" />
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_work_pic_day_rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_5"
        android:visibility="gone"
        >

        <View
            style="@style/CommonLandscapeLine"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_work_pic_day" />

        <TextView
            android:id="@+id/item_work_pic_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_size_18"
            android:layout_marginRight="@dimen/dimen_size_18"
            android:layout_centerInParent="true"
            android:textColor="@color/cor10"
            android:textSize="@dimen/text_size_14_sp" />

        <View
            style="@style/CommonLandscapeLine"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_work_pic_day" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/item_work_pic_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_160"
        android:layout_marginBottom="@dimen/dimen_size_10"

        >

        <ImageView
            android:id="@+id/item_work_pic_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_item_defalut" />

        <TextView
            android:id="@+id/item_work_pic_date"
            android:layout_width="@dimen/dimen_size_153"
            android:layout_height="@dimen/dimen_size_33"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/dimen_size_9"
            android:background="@color/c_90_f"
            android:gravity="center"
            android:text="2017-11-09 11:23:30"
            android:textColor="@color/cor9"
            android:textSize="@dimen/text_size_14_sp" />

    </FrameLayout>

</LinearLayout>

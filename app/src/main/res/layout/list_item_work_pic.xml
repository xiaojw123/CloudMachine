<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_160"
    android:layout_marginBottom="@dimen/dimen_size_10"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/item_work_pic_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/item_work_pic_date"
        android:background="@color/c_90_f"
        android:text="2017-11-09 11:23:30"
        android:textColor="@color/cor9"
        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:layout_width="@dimen/dimen_size_153"
        android:textSize="@dimen/text_size_14_sp"
        android:layout_marginBottom="@dimen/dimen_size_9"
        android:layout_height="@dimen/dimen_size_33" />

</FrameLayout>
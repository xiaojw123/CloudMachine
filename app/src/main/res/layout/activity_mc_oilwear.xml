<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.cloudmachine.utils.widgets.TitleView
        android:id="@+id/title_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
        >
    </com.cloudmachine.utils.widgets.TitleView>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="115dp"
       >
       <RelativeLayout 
           android:id="@+id/hours_use_layout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/bg_btn_oilwear_tab"
           android:layout_weight="1"
           >
            <TextView 
                android:layout_width="@dimen/common_line_width"
                android:layout_height="match_parent"
                android:background="#d9d9d9"
                android:layout_alignParentRight="true"
                />
           <RelativeLayout 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_centerHorizontal="true"
               >
               <ImageView 
                   android:id="@+id/icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/hours_use_icon"
                   android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:id="@+id/hours_use_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hours_use_text"
                    android:text="时均耗"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
           </RelativeLayout >
       </RelativeLayout>
       <RelativeLayout 
           android:id="@+id/hours_cost_layout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/bg_btn_oilwear_tab"
           android:layout_weight="1"
           >
            <TextView 
                android:layout_width="@dimen/common_line_width"
                android:layout_height="match_parent"
                android:background="#d9d9d9"
                android:layout_alignParentRight="true"
                />
           <RelativeLayout 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_centerHorizontal="true"
               >
               <ImageView 
                   android:id="@+id/hours_cost_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/hours_cost_icon"
                   android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:id="@+id/hours_cost_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hours_cost_icon"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hours_cost_text"
                    android:text="时均花费"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
           </RelativeLayout >
       </RelativeLayout>
       <RelativeLayout 
           android:id="@+id/day_use_layout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/bg_btn_oilwear_tab"
           android:layout_weight="1"
           >
            <TextView 
                android:layout_width="@dimen/common_line_width"
                android:layout_height="match_parent"
                android:background="#d9d9d9"
                android:layout_alignParentRight="true"
                />
           <RelativeLayout 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_centerHorizontal="true"
               >
               <ImageView 
                   android:id="@+id/day_use_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/day_use_icon"
                   android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:id="@+id/day_use_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/day_use_icon"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/day_use_text"
                    android:text="当日消耗"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
           </RelativeLayout >
       </RelativeLayout>
       <RelativeLayout 
           android:id="@+id/day_cost_layout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/bg_btn_oilwear_tab"
           android:layout_weight="1"
           >
            <TextView 
                android:layout_width="@dimen/common_line_width"
                android:layout_height="match_parent"
                android:background="#d9d9d9"
                android:layout_alignParentRight="true"
                />
           <RelativeLayout 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_centerHorizontal="true"
               >
               <ImageView 
                   android:id="@+id/day_cost_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/day_cost_icon"
                   android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:id="@+id/day_cost_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/day_cost_icon"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
               <TextView 
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/day_cost_text"
                    android:text="当日花费"
                    style="@style/TextView.OilWear_Text1"
                    android:layout_centerHorizontal="true"
                   />
           </RelativeLayout >
       </RelativeLayout>
   </LinearLayout>
   <LinearLayout 
       android:id="@+id/chart" 
       android:orientation="horizontal"
       android:layout_width="match_parent" 
       android:layout_height="match_parent"
       android:layout_marginTop="33dp"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginBottom="33dp"
       android:background="@color/white"
       android:visibility="gone"
       />
   <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
         />
	
</LinearLayout>
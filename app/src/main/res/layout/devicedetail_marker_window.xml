<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    >
    <!--android:background="@drawable/custom_info_bubble"-->

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:background="@drawable/icon_pop_bg2"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="192"
            android:gravity="center"
            android:text="去这里"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15_sp" />

        <TextView
            android:id="@+id/navigation_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="166"
            android:drawableLeft="@drawable/icon_navigation"
            android:paddingLeft="4dp"
            android:drawablePadding="3dp"
            android:text="导航"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15_sp" />


    </LinearLayout>

</FrameLayout>
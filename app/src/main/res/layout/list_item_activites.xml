<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_165"
    android:layout_marginBottom="@dimen/spa7"
    android:layout_marginLeft="@dimen/pad1"
    android:layout_marginRight="@dimen/pad1"
    android:background="@drawable/bg_card"
    android:padding="1dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/activites_post_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_106"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/activites_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/siz6"
            android:textColor="@color/cor8"
            android:layout_marginLeft="@dimen/dimen_size_17"
            android:layout_marginTop="@dimen/pad1"
            />
        <TextView
            android:id="@+id/activites_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cor10"
            android:textSize="@dimen/siz7"
            android:layout_marginLeft="@dimen/dimen_size_17"
            android:layout_marginTop="@dimen/dimen_size_2"
            />



    </LinearLayout>

</FrameLayout>
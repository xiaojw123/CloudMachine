<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
    android:background="@color/white"
              android:layout_height="match_parent">

    <!--<ListView
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:id="@+id/lv_available_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:visibility="gone"
        android:layout_height="@dimen/dimen_size_54">


        <View
            style="@style/CommonLandscapeLine"
            android:layout_toLeftOf="@+id/available_toalamount_tv"
            android:layout_centerVertical="true"

/>

        <TextView
            android:id="@+id/available_toalamount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14_sp"
            android:layout_marginLeft="@dimen/dimen_size_14"
            android:layout_marginRight="@dimen/dimen_size_14"
            android:layout_centerInParent="true"
            />

        <View
            style="@style/CommonLandscapeLine"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/available_toalamount_tv"
            />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:layout_marginTop="@dimen/dimen_size_54"
        android:visibility="gone"
        android:overScrollMode="never"
        />

    <TextView
        android:id="@+id/empt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你还没有优惠券"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_coupon_empt"
        android:drawablePadding="@dimen/pad2"
        android:visibility="gone"
        />



</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/home_title_layout1"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@android:color/holo_blue_dark"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/home_me_img"
                android:layout_width="@dimen/home_title_icon_width"
                android:layout_height="@dimen/home_title_icon_height"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:src="@drawable/icon_me" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="设备"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18_sp" />

            <ImageView
                android:id="@+id/home_box_img"
                android:layout_width="@dimen/home_title_icon1_width"
                android:layout_height="@dimen/home_title_icon_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@+id/home_actvite_img"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                android:src="@drawable/icon_box"
                android:visibility="gone"
                />

            <com.cloudmachine.widget.NotfyImgView
                android:id="@+id/home_actvite_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_activites"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>

        <!--common map-->
        <com.amap.api.maps2d.MapView
            android:id="@+id/home_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/home_title_layout1" />
        <!--<android.support.design.widget.FloatingActionButton-->

        <!--android:id="@+id/floatingActionButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:background="@android:color/holo_green_light"-->
        <!--android:src="@drawable/icon_menu"-->
        <!--android:layout_gravity="bottom|right|end"-->
        <!--android:layout_marginBottom="40dp"-->
        <!--android:layout_marginRight="25dp"-->
        <!--/>-->

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/home_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/home_title_layout1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:fab_backgroundColor="@color/white"
            app:fab_elevation="3dp"
            app:fab_iconSrc="@drawable/icon_menu" />

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/home_question_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            app:fab_backgroundColor="@color/white"
            app:fab_elevation="3dp"
            app:fab_iconSrc="@drawable/icon_ask_big" />


        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/home_flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/home_question_ans"
            android:layout_alignLeft="@+id/home_question_ans"
            android:layout_marginBottom="14dp"
            app:fab_backgroundColor="@color/white"
            app:fab_elevation="3dp"
            app:fab_iconSrc="@drawable/icon_flush_big" />


        <Button
            android:id="@+id/home_repair_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/icon_repair_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="报修"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16_sp" />


        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginBottom="60dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:text="报修"-->
        <!--android:visibility="gone"-->
        <!--/>-->


        <!--<android.support.design.widget.NavigationView-->
        <!--android:id="@+id/home_nav_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="start"-->
        <!--android:fitsSystemWindows="true"-->
        <!--app:headerLayout="@layout/home_nav_header"-->
        <!--app:menu="@menu/activity_home_drawer" />-->


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_me_layout"
        android:layout_width="219dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color_f5"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="58dp"
            android:paddingTop="22dp"
            android:background="@drawable/home_menu_item_bg"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_head_img"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/default_img"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/home_nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="登录"
                    android:textColor="@color/common_main"
                    android:textSize="@dimen/text_size_15_sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/item_repair_history"
                style="@style/HomeMenuContainerStyle">

                <TextView
                    style="@style/HomeMenuTvStyle"
                    android:drawableLeft="@drawable/icon_repair_history"
                    android:text="@string/repair_history" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/item_message"
                style="@style/HomeMenuContainerStyle">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                <com.cloudmachine.widget.NotfyImgView
                    android:id="@+id/item_message_nimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_message"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_message_tv"
                    style="@style/HomeMenuTvStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="消息" />
                </LinearLayout>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/item_ask"
                style="@style/HomeMenuContainerStyle">

                <TextView
                    style="@style/HomeMenuTvStyle"
                    android:drawableLeft="@drawable/icon_ask"
                    android:text="@string/my_ask" />
            </FrameLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/item_card_coupon"
                style="@style/HomeMenuContainerStyle">

                <TextView
                    style="@style/HomeMenuTvStyle"
                    android:drawableLeft="@drawable/icon_card_coupon"
                    android:text="@string/card_coupon" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/item_qr_code"
                style="@style/HomeMenuContainerStyle">

                <TextView
                    style="@style/HomeMenuTvStyle"
                    android:drawableLeft="@drawable/icon_qrcode"
                    android:text="@string/qr_code" />
            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/item_about"
                style="@style/HomeMenuContainerStyle">

                <TextView
                    style="@style/HomeMenuTvStyle"
                    android:drawableLeft="@drawable/icon_about"
                    android:text="@string/about_and_help" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/item_share_app"
                style="@style/HomeMenuContainerStyle">

                <TextView
                    style="@style/HomeMenuTvStyle"
                    android:drawableLeft="@drawable/icon_share"
                    android:text="@string/share_app" />
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v4.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_master_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="68dp"
            android:scaleType="fitXY"
            android:src="@drawable/valid_coupon"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="2"
            android:maxEms="24"
            android:ellipsize="end"
            android:text="挖掘机打不着火挖掘机打不着火挖掘机打不着火挖掘机打不着火挖掘机打不着火挖掘机打不着火"
            />

        <RelativeLayout
            android:layout_alignBottom="@id/iv_icon"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/modify_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-03-07"
                android:layout_alignParentBottom="true"
                android:paddingBottom="6dp"
                android:textColor="#999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.1万  阅读"
                android:layout_alignParentBottom="true"
                android:paddingBottom="6dp"
                android:layout_alignParentRight="true"
                android:textColor="#999999"
                android:textSize="12sp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:background="#E4E4E4"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical"
  >
      <RelativeLayout 
          android:id="@+id/right_layout"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/common_layout_height"
      android:layout_alignParentRight="true"
      >
      <LinearLayout 
          android:id="@+id/right_image_layout"
          android:layout_width="45dp"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:paddingRight="@dimen/layout_item_padding_left"
          android:gravity="right|center_vertical"
          >
          <ImageView
            android:id="@+id/state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" 
            android:layout_centerVertical="true"
            />
      </LinearLayout>
      <TextView 
          android:id="@+id/sensor_date_text"
 	    android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:text="——"
         android:layout_toLeftOf="@id/right_image_layout"
         android:textColor="@color/mc_device_old_text"
         android:textSize="@dimen/common_text2"
 	    />
      
      <TextView 
 	    android:id="@+id/sensor_name_text"
 	    android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical|left"
         android:text="传感器"
         android:paddingLeft="@dimen/common_view_gap"
         android:layout_toLeftOf="@id/sensor_date_text"
         android:singleLine="true"
            android:textSize="@dimen/common_text1"
            android:textColor="@color/black"
 	    />
      </RelativeLayout>
 	
 	
   <TextView 
       android:id="@+id/line"
       android:layout_width="match_parent"
       android:layout_height="@dimen/common_line_height"
       android:background="@color/line_bg"
       android:layout_marginLeft="@dimen/common_view_gap"
       />
    	
</LinearLayout>

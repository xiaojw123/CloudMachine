<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@color/white"
  >
    
  <RelativeLayout 
      android:id="@+id/trans_layout"
      android:layout_width="match_parent"
  	  android:layout_height="@dimen/common_view_gap"
  	  android:background="#ededed"
  	  android:orientation="horizontal"
      >
      
  </RelativeLayout>
  <TextView 
      android:id="@+id/line_bottom1"
      android:layout_width="match_parent"
	  android:layout_height="@dimen/common_line_height"
	  android:background="@color/mc_line"
      />
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="@dimen/common_layout_height"
      >
      <LinearLayout 
          android:id="@+id/parent_icon_layout"
          android:layout_width="@dimen/node_tree_left_gap"
      	  android:layout_height="match_parent"
      	  android:gravity="center"
      	  android:layout_alignParentLeft="true"
          >
          <ImageView 
          android:id="@+id/parent_icon"
          android:layout_width="wrap_content"
      	  android:layout_height="wrap_content"
          />
      </LinearLayout>
      
      <RelativeLayout 
          android:layout_width="match_parent"
      	  android:layout_height="match_parent"
      	  android:layout_toRightOf="@id/parent_icon_layout"
          >
           <ImageView 
		      	android:id="@+id/line_bottom"
		     	android:layout_width="match_parent"
				android:layout_height="1dp"
	  			android:background="@color/mc_line"
				android:layout_alignParentBottom="true"
		      />
           <ImageView
				android:id="@+id/arrow_r"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="@dimen/common_right_gap"
				android:layout_centerVertical="true"
				android:background="@drawable/mc_arrow_r"
				/>
           <LinearLayout 
               	android:layout_width="match_parent"
      			android:layout_height="match_parent"
      			android:layout_toLeftOf="@id/arrow_r"
      			android:orientation="horizontal"
      			android:gravity="center_vertical"
               >
               <ImageView 
                      android:id="@+id/children_icon"
			          android:layout_width="@dimen/common_icon_image_wh"
			      	  android:layout_height="@dimen/common_icon_image_wh"
			      	  android:scaleType="centerCrop"
			      	  android:src="@drawable/mc_default_icon"
                   />
               <TextView 
                   	  android:id="@+id/name_text"
			          android:layout_width="wrap_content"
			      	  android:layout_height="wrap_content"
			      	  android:lines="1"
			      	  android:textColor="@color/black"
			      	  android:textSize="@dimen/common_text1"
			      	  android:text="模拟机"
			      	  android:layout_marginLeft="@dimen/common_view_min_gap"
                   />
           </LinearLayout>
      </RelativeLayout>
  </RelativeLayout>
  <TextView 
      android:id="@+id/line_bottom2"
      android:layout_width="match_parent"
	  android:layout_height="1dp"
	  android:background="@color/mc_line"
      />
    	
</LinearLayout>

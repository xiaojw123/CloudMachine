<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="145px"
        android:background="@color/public_bg"
        >
        <TextView 
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_marginRight="66px"
        	android:layout_centerVertical="true"
        	android:text="取消"
        	android:textColor="@color/public_blue_bg" 
        	android:textSize="@dimen/public_textsize3"
            />
        <LinearLayout 
            android:id="@+id/city_layout"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="@dimen/public_layout_padding_left"
        	android:layout_centerVertical="true"
            >
            <TextView 
                android:id="@+id/city_text"
                android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="杭州"
        	    android:textColor="@color/public_black_4"
        	    android:textSize="@dimen/public_textsize3"
                />
            <LinearLayout 
                android:layout_width="99px"
        	    android:layout_height="match_parent"
        	    android:gravity="center"
                >
                <ImageView 
                    android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:background="@drawable/city_icon"
                    />
            </LinearLayout>
            <TextView 
                android:layout_width="@dimen/common_line_width"
       	        android:layout_height="55px"
       	        android:background="@color/public_line"
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/map_choose_layout"
            android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:layout_toRightOf="@id/city_layout"
        	android:layout_centerVertical="true"
        	android:gravity="center"
        	 android:paddingLeft="@dimen/layout_item_padding_left"
            android:paddingRight="@dimen/layout_item_padding_left"
            android:visibility="gone"
            >
            <ImageView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_map_choose"
            />
        </LinearLayout>
        
        <EditText 
            android:id="@+id/site_edit"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_toLeftOf="@id/right_text"
        	android:layout_toRightOf="@id/map_choose_layout"
        	android:layout_marginLeft="15px"
        	android:layout_centerVertical="true"
        	android:textColor="@color/public_black"
        	android:textSize="@dimen/public_textsize3"
        	android:hint="输入机器所在位置"
        	android:textColorHint="#c7c7c7"
        	android:background="@null"
            />
    </RelativeLayout>
    <TextView 
         android:layout_width="match_parent"
       	        android:layout_height="@dimen/common_line_width"
       	        android:background="@color/public_line"
        />
    <ListView
	        android:id="@+id/search_listview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/line_bg"
	        android:dividerHeight="0dp" />
	
	
</LinearLayout>

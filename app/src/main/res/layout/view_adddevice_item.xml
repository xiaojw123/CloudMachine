<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    >
    <TextView 
        android:id="@+id/xing"
        android:layout_width="15dp"
    	android:layout_height="match_parent"
    	android:text="*"
    	android:textColor="@color/redcolor"
    	android:textSize="12sp"
    	android:gravity="center"
    	android:visibility="invisible"
        />
    <TextView 
        android:id="@+id/bottom_line"
     		android:layout_width="match_parent"
			android:layout_height="@dimen/common_line_width"
			android:background="@color/mc_engine_line"
			android:layout_alignParentBottom="true"
			android:visibility="gone"
        	/>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginLeft="15dp"
        >
        <TextView 
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
    		android:layout_height="@dimen/common_line_width"
    		android:background="@color/public_line"
    		android:layout_alignParentBottom="true"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:layout_above="@id/ll_line"
            >
            <ImageView 
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:background="@drawable/mc_arrow_r"
    		    android:layout_alignParentRight="true"
    		    android:layout_marginRight="15dp"
    		    android:layout_centerVertical="true"
    		    android:visibility="gone"
                />
            <TextView 
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_centerVertical="true"
    			android:layout_alignParentLeft="true"
    			style="@style/TextView.Meter_Text2"
    			android:text="名称"
                />
            <RelativeLayout 
                android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_toLeftOf="@id/arrow"
    			android:layout_toRightOf="@id/name_text"
    			android:layout_centerVertical="true"
    			android:paddingLeft="3dp"
    			android:paddingRight="3dp"
    			android:focusable="true"  
   				android:focusableInTouchMode="true"
                >
                <EditText 
                    android:id="@+id/edit_view"
                    android:layout_width="match_parent"
    			    android:layout_height="wrap_content"
    			    android:background="@null"
    			    android:textColorHint="@color/common_hint"
    			    style="@style/TextView.Meter_Text2"
    			    android:visibility="gone"
    			    android:gravity="center_horizontal"
                    />
                <TextView 
                    android:id="@+id/ctext_view"
                    android:layout_width="match_parent"
    			    android:layout_height="wrap_content"
    			    style="@style/TextView.Meter_Text2"
    			    android:textColor="@color/mc_device_hint_text"
    			    android:layout_marginLeft="@dimen/add_dev_item_ctext_l"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    
        
</RelativeLayout>

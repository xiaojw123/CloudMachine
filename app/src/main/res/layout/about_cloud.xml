<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    >

    <com.cloudmachine.widget.CommonTitleView
        android:id="@+id/about_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cloudm:common_title_name="@string/about_and_help"
        />

    <LinearLayout
        android:layout_below="@+id/about_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:showDividers="middle"
        android:layout_marginTop="@dimen/dimen_size_6"
        android:divider="@drawable/divider_line_horztial"
        >
        <FrameLayout
            android:id="@+id/use_help_fl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spa3"
            android:paddingLeft="@dimen/pad2"
            android:paddingRight="@dimen/pad2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="使用帮助"
                android:textColor="@color/cor9"
                android:textSize="@dimen/siz3"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_gravity="right|center_vertical"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/feedback_fl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spa3"
            android:paddingLeft="@dimen/pad2"
            android:paddingRight="@dimen/pad2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="意见反馈"
                android:textColor="@color/cor9"
                android:textSize="@dimen/siz3"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_gravity="right|center_vertical"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/shareapp_fl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spa3"
            android:paddingLeft="@dimen/pad2"
            android:paddingRight="@dimen/pad2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="分享APP"
                android:textColor="@color/cor9"
                android:textSize="@dimen/siz3"
                />
        </FrameLayout>

        <!--<Button-->
            <!--android:id="@+id/about_envir_btn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/spa3"-->
            <!--android:gravity="center"-->
            <!--android:onClick="changeEnvir"-->
            <!--android:textSize="@dimen/text_size_18_sp"-->
            <!--android:background="#cede"-->
            <!--android:visibility="gone"-->
            <!--/>-->





    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_about_logo"
        android:layout_above="@+id/version"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_size_14"
        />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_size_20"
        android:text="云机械 1.0 版本"
        android:textColor="@color/about_version_text"
        android:textSize="@dimen/public_title_textsize" />




    
</RelativeLayout>
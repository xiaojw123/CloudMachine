<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView 
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="@dimen/common_alert_dialog_text"
        />
<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_line_height"
                    android:background="#d7d6de" />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="43dp"
    >
    <TextView 
        android:id="@+id/positive_button"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:gravity="center"
    	android:text="取消"
    	android:textColor="#017bff"
    	android:textSize="@dimen/common_text1"
        />
    <ImageView
        	android:id="@+id/button_mid_line"
            android:layout_width="@dimen/common_line_height"
            android:layout_height="match_parent"
            android:background="#d7d6de" />
    <TextView 
        android:id="@+id/negative_button"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:gravity="center"
    	android:text="好"
    	android:textColor="#017bff"
    	android:textSize="@dimen/common_text1"
        />

</LinearLayout>
</LinearLayout>

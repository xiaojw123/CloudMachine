<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
        />
  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" > 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_card"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="车牌号"
		    	cloudm:hint=""
		    	cloudm:arrow="false"
		    	cloudm:last="true"
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_name"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="名称"
		    	cloudm:hint="请给机器取个名字吧"
		    	android:layout_marginTop="@dimen/layout_item_padding_left"
                ></com.cloudmachine.autolayout.widgets.CanBeEditItemView>
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_type"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="机型"
		    	cloudm:hint="请选择机器机型"
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_brand1"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="品牌"
		    	cloudm:hint="请选择机器品牌"
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_model"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="型号"
		    	cloudm:hint="请选择机器型号"
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_rackId"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="机号"
		    	cloudm:hint=""
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_year"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="年份"
		    	cloudm:hint="请选择机器年份"
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_workTime"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="总工作时长"
		    	cloudm:hint=""
		    	cloudm:last="true"
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_owner"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="机主"
		    	cloudm:hint="请输入机主名称"
		    	android:visibility="gone"
                />
            <com.cloudmachine.autolayout.widgets.CanBeEditItemView
                android:id="@+id/device_phone_number"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="手机"
		    	cloudm:hint="请输入机主手机号码"
		    	cloudm:last="true"
		    	android:visibility="gone"
                />

			<FrameLayout
				android:id="@+id/deivce_member"
				android:layout_width="match_parent"
				android:layout_height="44dp"
				android:background="@color/white"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="3dp"
				android:paddingLeft="15dp"
				android:paddingRight="10dp"
				android:visibility="gone"
				>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/mc_members"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_16_sp"
					android:layout_gravity="center_vertical"
					/>

				<ImageView
					android:layout_gravity="right|center_vertical"
					android:src="@drawable/mc_arrow_r"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />


			</FrameLayout>

			<LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_info_image_title_height"
                >
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginLeft="@dimen/public_layout_padding_left"
                	android:text="@string/device_image_title"
                	android:textSize="@dimen/public_textsize2"
                	android:textColor="@color/public_black_9"
                	android:layout_gravity="center_vertical"
                    />
                    
            </LinearLayout>

            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_info_images_height"
                >
                <RelativeLayout 
                    android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:layout_weight="1"
                	android:gravity="center"
                    >
                    <ImageView 
                        android:id="@+id/decive_image"
                        android:layout_width="@dimen/device_info_images_height"
                		android:layout_height="match_parent"
						android:scaleType="fitXY"
                        />
                    <TextView 
                        android:layout_width="@dimen/device_info_images_height"
                		android:layout_height="@dimen/device_info_text_height"
                		android:background="@color/public_transparent_50"
                		android:gravity="center"
                		android:text="机器全身照"
                		android:textColor="@color/public_white"
                		android:textSize="@dimen/device_info_text_size"
                		android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:layout_weight="1"
                	android:gravity="center"
                    >
                    <ImageView 
                        android:id="@+id/name_image"
                		android:layout_height="match_parent"
                        android:layout_width="@dimen/device_info_images_height"
						android:scaleType="fitXY"
                        />
                        <!--android:layout_width="@dimen/device_info_images_height"-->
                    <TextView
                        android:layout_width="@dimen/device_info_images_height"
                		android:layout_height="@dimen/device_info_text_height"
                		android:background="@color/public_transparent_50"
                		android:gravity="center"
                		android:text="铭牌照片"
                		android:textColor="@color/public_white"
                		android:textSize="@dimen/device_info_text_size"
                		android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:layout_weight="1"
                	android:gravity="center"
                    >
                    <ImageView 
                        android:id="@+id/engine_image"
                        android:layout_width="@dimen/device_info_images_height"
                		android:layout_height="match_parent"
						android:scaleType="fitXY"
                        />
                    <TextView 
                        android:layout_width="@dimen/device_info_images_height"
                		android:layout_height="@dimen/device_info_text_height"
                		android:background="@color/public_transparent_50"
                		android:gravity="center"
                		android:text="发动机照片"
                		android:textColor="@color/public_white"
                		android:textSize="@dimen/device_info_text_size"
                		android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            </LinearLayout>
            <com.cloudmachine.autolayout.widgets.RadiusButtonView
			        android:id="@+id/change_owner"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/novice_guide_button_height"
			        android:layout_gravity="center_horizontal"
			        cloudm:rbtn_strokeColor="@color/public_blue_bg"
			        cloudm:rbtn_fillColor_nm="@color/public_blue_bg"
			        cloudm:rbtn_fillColor_dw="@color/public_b_20"
			        cloudm:rbtn_text="@string/device_change_owner"
			        cloudm:rbtn_textColor="@color/public_white"
			        cloudm:rbtn_textSize="@dimen/about_button_textsize" 
			        android:layout_marginLeft="@dimen/public_layout_padding_left"
			        android:layout_marginRight="@dimen/public_layout_padding_left"
			        android:layout_marginTop="@dimen/public_layout_padding_left"
			        />

         </LinearLayout>
 </ScrollView>
	    
</LinearLayout>

</RelativeLayout>
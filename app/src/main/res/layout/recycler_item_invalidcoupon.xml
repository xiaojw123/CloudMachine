<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="161dp"
        android:layout_height="88dp"
        android:background="@drawable/invalid_coupon"
        >
        
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="143dp"
            android:layout_height="75dp"
            android:background="@drawable/invalidcoupon_shape"
            >

            <LinearLayout
                android:id="@+id/ll1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#a8a7a7"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#a8a7a7"
                    android:layout_gravity="bottom"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_use_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修保养券"
                    android:textColor="#a7a7a7"
                    android:layout_marginLeft="9dp"
                    android:layout_gravity="bottom"
                    android:textSize="10sp"
                    />

            </LinearLayout>
            
            <View
                android:id="@+id/v1"
                android:layout_marginTop="6dp"
                android:layout_below="@id/ll1"
                android:background="#cecece"
                android:layout_centerHorizontal="true"
                android:layout_width="107dp"
                android:layout_height="2dp"/>

            <LinearLayout
                android:layout_below="@id/v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/limitInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满100元可用,仅耗件可用"
                    android:textColor="#a7a7a7"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_valid_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="有效期: 2017.10.15至2018.10.21"
                    android:textColor="#a7a7a7"
                    android:textSize="8sp"
                    />


            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_used"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/used"
            />
        <ImageView
            android:id="@+id/iv_expried"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expired"
            android:visibility="gone"
            />


    </RelativeLayout>

</LinearLayout>
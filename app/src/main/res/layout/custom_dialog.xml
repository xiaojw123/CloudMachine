<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="@dimen/alert_window_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_alert_window"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/alert_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:background="@drawable/ic_alert" />



            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_size_16"
                android:textColor="@color/cor9"
                android:layout_marginLeft="@dimen/pad2"
                android:layout_marginRight="@dimen/pad2"
                android:textSize="@dimen/siz6"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dimen_size_8"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_1"
                android:layout_marginTop="@dimen/dimen_size_32"
                android:background="@color/cor12" />


        <TextView
            android:id="@+id/netrualButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:gravity="center"
            android:textColor="@color/cor1"
            android:textSize="@dimen/siz2"
            />

            <LinearLayout
                android:id="@+id/chooseBtnCotainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_50"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/negativeButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/cor8"
                    android:textSize="@dimen/siz2" />

                <View
                    android:layout_width="@dimen/dimen_size_1"
                    android:layout_height="match_parent"
                    android:background="@color/cor12" />

                <TextView
                    android:id="@+id/positiveButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/cor1"
                    android:textSize="@dimen/siz2" />

            </LinearLayout>
        </LinearLayout>

</FrameLayout>
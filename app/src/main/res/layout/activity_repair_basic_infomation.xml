<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/public_white"
              android:orientation="vertical">

    <com.cloudmachine.widget.CommonTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title_name="@string/detail"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132px">

                <ImageView
                    android:layout_width="59px"
                    android:layout_height="59px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    android:background="@drawable/repair_schedual" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22px"
                    android:text="进度"
                    android:textColor="@color/public_black"
                    android:textSize="@dimen/public_textsize1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24px"
                android:background="@color/public_bg">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="机型" />

                <TextView
                    android:id="@+id/repair_basic_text1"
                    style="@style/repair_basic_item_text" />
            </LinearLayout>

            <LinearLayout style="@style/line_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="品牌" />

                <TextView
                    android:id="@+id/repair_basic_text2"
                    style="@style/repair_basic_item_text" />
            </LinearLayout>

            <LinearLayout style="@style/line_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="型号" />

                <TextView
                    android:id="@+id/repair_basic_text3"
                    style="@style/repair_basic_item_text" />
            </LinearLayout>

            <LinearLayout style="@style/line_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="机号" />

                <TextView
                    android:id="@+id/repair_basic_text4"
                    style="@style/repair_basic_item_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/repair_basic_loc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout style="@style/line_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="148px">

                    <TextView
                        style="@style/repair_basic_item_text"
                        android:text="位置" />

                    <TextView
                        android:id="@+id/repair_basic_loc"
                        style="@style/repair_basic_item_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line5"
                style="@style/line_layout"
                android:orientation="vertical"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="148px"
                android:visibility="gone">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="位置" />

                <TextView
                    android:id="@+id/repair_basic_text5"
                    style="@style/repair_basic_item_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24px"
                android:background="@color/public_bg">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="联系人" />

                <TextView
                    android:id="@+id/repair_basic_text6"
                    style="@style/repair_basic_item_text" />
            </LinearLayout>

            <LinearLayout style="@style/line_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="联系方式" />

                <TextView
                    android:id="@+id/repair_basic_text7"
                    style="@style/repair_basic_item_text" />
            </LinearLayout>

            <LinearLayout style="@style/line_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px">

                <TextView
                    style="@style/repair_basic_item_text"
                    android:text="故障描述" />

                <TextView
                    android:id="@+id/repair_basic_text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    android:textColor="@color/public_black"
                    android:textSize="@dimen/public_textsize1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/repair_basic_img_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24px"
                    android:background="@color/public_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="报修图片"
                    android:textSize="@dimen/text_size_16_sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/repair_basic_rlv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
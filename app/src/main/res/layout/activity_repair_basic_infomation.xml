<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/public_white"
    >

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <ScrollView 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
            >
        <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_width="match_parent"
    			android:layout_height="132px"
                >
                <ImageView 
                    android:layout_width="59px"
    				android:layout_height="59px"
    				android:background="@drawable/repair_schedual"
    				android:layout_marginLeft="@dimen/public_layout_padding_left"
    				android:layout_gravity="center_vertical"
                    />
                <TextView 
                    android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_marginLeft="22px"
    				android:textColor="@color/public_black"
    				android:textSize="@dimen/public_textsize1"
    				android:text="进度"
    				android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/add_list_layout"
                android:layout_width="match_parent"
   				android:layout_height="wrap_content"
   				android:orientation="vertical"
                >
                
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="24px"
   				android:background="@color/public_bg"
                >
                
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="148px"
                >
                <TextView 
                    android:text="机型"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text1"
                    style="@style/repair_basic_item_text"
                    />
            </LinearLayout>
            <LinearLayout
                    style="@style/line_layout"
                    />
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="148px"
                >
                <TextView 
                    android:text="品牌"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text2"
                    style="@style/repair_basic_item_text"
                    />
            </LinearLayout>
            <LinearLayout
                    style="@style/line_layout"
                    />
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="148px"
                >
                <TextView 
                    android:text="型号"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text3"
                    style="@style/repair_basic_item_text"
                    />
            </LinearLayout>
            <LinearLayout
                    style="@style/line_layout"
                    />
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="148px"
                >
                <TextView 
                    android:text="机号"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text4"
                    style="@style/repair_basic_item_text"
                    />
            </LinearLayout>
            <LinearLayout
                	android:id="@+id/line5"
                    style="@style/line_layout"
                    android:visibility="gone"
                    />
            <LinearLayout 
                android:id="@+id/layout5"
                android:layout_width="match_parent"
   				android:layout_height="148px"
   				android:visibility="gone"
                >
                <TextView 
                    android:text="位置"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text5"
                    style="@style/repair_basic_item_text"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="24px"
   				android:background="@color/public_bg"
                >
                
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="148px"
                >
                <TextView 
                    android:text="联系人"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text6"
                    style="@style/repair_basic_item_text"
                    />
            </LinearLayout>
            <LinearLayout
                    style="@style/line_layout"
                    />
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="148px"
                >
                <TextView 
                    android:text="联系方式"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text7"
                    style="@style/repair_basic_item_text"
                    />
            </LinearLayout>
            <LinearLayout
                    style="@style/line_layout"
                    />
            <LinearLayout 
                android:layout_width="match_parent"
   				android:layout_height="148px"
                >
                <TextView 
                    android:text="故障描述"
                    style="@style/repair_basic_item_text"
                    />
                <TextView 
                    android:id="@+id/repair_basic_text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
    				android:textColor="@color/public_black"
    				android:textSize="@dimen/public_textsize1"
    				android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
	</ScrollView>
</LinearLayout>
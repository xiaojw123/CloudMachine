<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.cloudmachine.autolayout.widgets.TitleView>

    <RelativeLayout
        android:id="@+id/to_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_160"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_style_item"
        >

        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textColor="@color/mc_state2"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btn_topay"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/update_color_bg"
            android:text="去付款"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/to_pay"
        android:layout_below="@id/title_layout">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_device_brand"
                    style="@style/layout_item"
                    >

                    <TextView
                        android:id="@+id/t1"
                        style="@style/personal_left_text"
                        android:text="机器品牌"
                        />

                    <TextView
                        android:id="@+id/tv_device_brand"
                        style="@style/personal_edit_text"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:text="斗山"
                        />
                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    />

                <RelativeLayout
                    android:id="@+id/rl_device_model"
                    style="@style/layout_item"
                    >

                    <TextView
                        android:id="@+id/t2"
                        style="@style/personal_left_text"
                        android:text="机器型号"
                        />

                    <TextView
                        android:id="@+id/tv_device_model"
                        style="@style/personal_edit_text"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:text="GFD55147"
                        />
                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#F6F6F9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="耗件详情"
                        android:textColor="#999999"
                        />
                </RelativeLayout>

                <com.cloudmachine.utils.CustomListView
                    android:id="@+id/lv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.cloudmachine.utils.CustomListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="#F6F6F9"/>

                <RelativeLayout
                    android:id="@+id/rl_weixin_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_height_140"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_weixin_pay"
                        android:layout_width="@dimen/public_height_100"
                        android:layout_height="@dimen/public_height_100"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/public_left_margin_42"
                        android:src="@drawable/weixinpay"
                        />

                    <TextView
                        android:id="@+id/tv_weixinpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/public_left_margin_42"
                        android:layout_toRightOf="@id/iv_weixin_pay"
                        android:text="微信支付"
                        android:textSize="16sp"
                        />

                    <CheckBox
                        android:id="@+id/cb_weixin_pay"
                        style="@style/PayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/public_left_margin_42"
                        android:clickable="false"
                        />

                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/common_left_gap"
                    />

                <RelativeLayout
                    android:id="@+id/rl_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_height_140"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_alipay"
                        android:layout_width="@dimen/public_height_100"
                        android:layout_height="@dimen/public_height_100"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/public_left_margin_42"
                        android:src="@drawable/aliapy"
                        />

                    <TextView
                        android:id="@+id/tv_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/public_left_margin_42"
                        android:layout_toRightOf="@id/iv_alipay"
                        android:text="支付宝支付"
                        android:textSize="16sp"
                        />

                    <CheckBox
                        android:id="@+id/cb_alipay"
                        style="@style/PayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/public_left_margin_42"
                        android:clickable="false"
                        />

                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/common_left_gap"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#F6F6F9"/>

                <RelativeLayout
                    android:id="@+id/rl_consumption_totalmount"
                    style="@style/layout_item"
                    >

                    <TextView
                        android:id="@+id/t4"
                        style="@style/personal_left_text"
                        android:text="耗件总费用"
                        />

                    <TextView
                        android:id="@+id/tv_consumption_totalmount"
                        style="@style/personal_edit_text"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:text=""
                        />
                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/common_left_gap"
                    />

                <RelativeLayout
                    android:id="@+id/rl_man_hour"
                    style="@style/layout_item"
                    >

                    <TextView
                        android:id="@+id/t3"
                        style="@style/personal_left_text"
                        android:text="工时费用"
                        />

                    <TextView
                        android:id="@+id/tv_man_hour"
                        style="@style/personal_edit_text"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:text="王海华 (400元)"
                        />
                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    />

                <RelativeLayout
                    android:id="@+id/rl_discount_amount"
                    style="@style/layout_item"
                    >

                    <TextView
                        android:id="@+id/t5"
                        style="@style/personal_left_text"
                        android:text="耗件折扣"
                        />

                    <TextView
                        android:id="@+id/tv_discount_amount"
                        style="@style/personal_edit_text"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:text=""
                        />
                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    />

                <RelativeLayout
                    android:id="@+id/rl_coupon"
                    style="@style/layout_item"
                    >

                    <TextView
                        android:id="@+id/tv_coupon"
                        style="@style/personal_left_text"
                        android:text="优惠券"
                        />

                    <ImageView
                        android:id="@+id/arrowTip7"
                        style="@style/personal_arrow_image"
                        />

                    <TextView
                        android:id="@+id/select3"
                        style="@style/personal_edit_text"
                        android:layout_alignBaseline="@+id/tv_coupon"
                        android:layout_alignBottom="@+id/tv_coupon"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/arrowTip7"
                        android:layout_toStartOf="@+id/arrowTip7"
                        android:background="@null"
                        android:text="无可用"/>
                </RelativeLayout>

                <LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/common_left_gap"
                    />

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_title_height" >

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/public_layout_padding_left"
            android:paddingRight="@dimen/public_layout_padding_left" >

            <TextView
                style="@style/login_left_text"
                android:text="@string/common_cancel" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="新用户注册"
        android:textColor="@color/public_black"
        android:textSize="@dimen/register_title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:layout_marginTop="@dimen/register_title_text_size" >

        <TextView
            style="@style/register_item_left_text"
            android:text="手机号" />

        <com.cloudmachine.utils.widgets.ClearEditTextView
            android:id="@+id/phone_string"
            style="@style/register_clear_edit_text"
            android:hint="请输入手机号码" />
    </LinearLayout>

    <LinearLayout
        style="@style/line_layout"
        android:layout_marginLeft="@dimen/public_layout_padding_left" />

    <RelativeLayout
        android:id="@+id/code_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height" >

        <RelativeLayout
            android:id="@+id/validate_layout"
            android:layout_width="@dimen/register_code_layout_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="@dimen/public_line_wh"
                android:layout_height="match_parent"
                android:background="@color/public_line" />

            <TextView
                android:id="@+id/validate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="获取验证码"
                android:textColor="@drawable/bg_text_validate"
                android:textSize="@dimen/public_textsize1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/validate_layout"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                style="@style/register_item_left_text"
                android:text="验证码" />

            <com.cloudmachine.utils.widgets.ClearEditTextView
                android:id="@+id/validate_code"
                style="@style/register_clear_edit_text"
                android:hint="验证码" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/line_layout"
        android:layout_marginLeft="@dimen/public_layout_padding_left" />


    <LinearLayout
        android:id="@+id/invitation_code_cotainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
         >

        <TextView
            style="@style/register_item_left_text"
            android:text="邀请码" />

        <com.cloudmachine.utils.widgets.ClearEditTextView
            android:id="@+id/invitation_code"
            style="@style/register_clear_edit_text"
            android:hint="如有邀请码，请输入" />
    </LinearLayout>
    <LinearLayout
        style="@style/line_layout"
        android:layout_marginLeft="@dimen/public_layout_padding_left" />

<LinearLayout 
    android:id="@+id/pwd_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height" >

        <TextView
            style="@style/register_item_left_text"
            android:text="密码" />

        <com.cloudmachine.utils.widgets.ClearEditTextView
            android:id="@+id/pwd_string"
            style="@style/register_clear_edit_text"
            android:hint="请输入密码" 
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/line_layout"
        android:layout_marginLeft="@dimen/public_layout_padding_left" />
</LinearLayout>
    
<LinearLayout 
    android:id="@+id/pwd_new_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height" >

        <TextView
            style="@style/register_item_left_text"
            android:text="新密码" />

        <com.cloudmachine.utils.widgets.ClearEditTextView
            android:id="@+id/pwd_new_string"
            style="@style/register_clear_edit_text"
            android:hint="请输入新密码" 
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        style="@style/line_layout"
        android:layout_marginLeft="@dimen/public_layout_padding_left" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height" >

        <TextView
            style="@style/register_item_left_text"
            android:text="确认密码" />

        <com.cloudmachine.utils.widgets.ClearEditTextView
            android:id="@+id/pwd_new2_string"
            style="@style/register_clear_edit_text"
            android:hint="请再次输入新密码" 
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        style="@style/line_layout"
        android:layout_marginLeft="@dimen/public_layout_padding_left" />
    </LinearLayout>
    

    <com.cloudmachine.autolayout.widgets.RadiusButtonView
        android:id="@+id/find_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/novice_guide_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/public_layout_padding_left"
        android:layout_marginRight="@dimen/public_layout_padding_left"
        android:layout_marginTop="@dimen/public_layout_padding_left"
        cloudm:rbtn_fillColor_dw="@color/public_b_20"
        cloudm:rbtn_fillColor_nm="@color/public_blue_bg"
        cloudm:rbtn_strokeColor="@color/public_blue_bg"
        cloudm:rbtn_text="@string/login_title"
        cloudm:rbtn_textColor="@color/public_white"
        cloudm:rbtn_textSize="@dimen/about_button_textsize" />

    <LinearLayout
        android:id="@+id/agreement_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/public_textsize1"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_agreement1"
            android:textColor="@color/public_edit_text"
            android:textSize="@dimen/public_textsize2" />

        <TextView
            android:id="@+id/agreement_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_agreement2"
            android:textColor="@color/public_blue_bg"
            android:textSize="@dimen/public_textsize2" />
    </LinearLayout>

</LinearLayout>
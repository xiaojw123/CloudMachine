<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    android:orientation="vertical" >

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/sc_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_repair_now" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/novice_guide_iamge"
                        android:layout_width="@dimen/novice_guide_iamge_width"
                        android:layout_height="@dimen/novice_guide_iamge_height"
                        android:src="@drawable/novice_guide_iamge" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_repair_now"
            android:layout_width="match_parent"
            android:layout_height="@dimen/repair_bottom_height"
            android:layout_alignParentBottom="true"
            android:background="@color/public_white" >

            <com.cloudmachine.autolayout.widgets.RadiusButtonView
                android:id="@+id/btn_trial"
                android:layout_width="@dimen/novice_guide_button_width"
                android:layout_height="@dimen/novice_guide_button_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/novice_guide_button_marginBottom"
                cloudm:rbtn_fillColor_dw="@color/public_b_20"
                cloudm:rbtn_fillColor_nm="@color/public_blue_bg"
                cloudm:rbtn_strokeColor="@color/public_blue_bg"
                cloudm:rbtn_text="@string/mc_novice_guide_button_text"
                cloudm:rbtn_textColor="@color/public_white"
                cloudm:rbtn_textSize="@dimen/about_button_textsize" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cloudmachine.widget.CommonTitleView
        android:id="@+id/viewcoupon_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title_name="查看优惠券"
        app:common_right_text="确定"
        />

    <LinearLayout
        android:id="@+id/vp_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-4dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spa5"
        android:background="@color/public_bg"
        android:orientation="horizontal">

        <FrameLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/viewcoupon_no_use"
                    style="@style/PayCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingTop="@dimen/dimen_size_2"
                    android:paddingBottom="@dimen/dimen_size_2"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_size_13"
                    android:text="不使用卡券"
                    android:textColor="@color/cor9"
                    android:textSize="@dimen/text_size_16_sp"

                    />

            </LinearLayout>

        </FrameLayout>
        <!--android:drawablePadding="@dimen/dimen_size_14"-->

        <FrameLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/viewcoupon_use"
                    style="@style/PayCheckBox"
                    android:paddingTop="@dimen/dimen_size_2"
                    android:paddingBottom="@dimen/dimen_size_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_size_13"
                    android:text="自动最优方案"
                    android:textColor="@color/cor9"
                    android:textSize="@dimen/text_size_16_sp"

                    />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_54"
        android:paddingLeft="@dimen/dimen_size_20"
        android:paddingRight="@dimen/dimen_size_20">


        <View
            style="@style/CommonLandscapeLine"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/available_toalamount_tv"

            />

        <TextView
            android:id="@+id/available_toalamount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_size_14"
            android:layout_marginRight="@dimen/dimen_size_14"
            android:textColor="@color/cor2"
            android:textSize="@dimen/text_size_14_sp" />

        <View
            style="@style/CommonLandscapeLine"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/available_toalamount_tv" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_size_20"
        android:paddingRight="@dimen/dimen_size_20" />

    </LinearLayout>


    <TextView
        android:id="@+id/vp_empt_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="无可用卡劵"
        android:textSize="@dimen/text_size_18_sp"
        android:visibility="gone" />


</LinearLayout>
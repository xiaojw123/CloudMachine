<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="@dimen/alert_window_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_alert_window"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/bind_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_size_33"
            android:textSize="@dimen/text_size_13_sp"
            android:lineSpacingExtra="@dimen/dimen_size_9"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/dimen_size_33"
            android:layout_marginTop="@dimen/dimen_size_28"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_33"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_size_33"
            android:layout_marginRight="@dimen/dimen_size_33"
            android:background="@drawable/bind_verfiy_bg"
            android:layout_marginTop="@dimen/dimen_size_17"
            android:layout_marginBottom="@dimen/dimen_size_20"
            >

            <EditText
                android:id="@+id/bind_pay_acount_edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_12_sp"
                android:layout_weight="90"
                android:hint="@string/input_message_verifycode"
                android:paddingLeft="@dimen/dimen_size_6"
                android:textColorHint="@color/cor11"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                />

            <TextView
                android:id="@+id/bind_getcode_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="53"
                android:text="60S"
                android:textSize="@dimen/text_size_12_sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bind_verfiy_btn_bg"
                />
        </LinearLayout>

        
        <View
            android:layout_height="1dp"
            style="@style/CommonLandscapeLine"
            />
        <LinearLayout
            android:id="@+id/chooseBtnCotainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
           
            android:orientation="horizontal">

            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/cor8"
                android:textSize="@dimen/siz2" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/cor12" />

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/cor1"
                android:textSize="@dimen/siz2" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
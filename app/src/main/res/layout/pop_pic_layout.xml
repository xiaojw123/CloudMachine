<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_pic_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_bg_color"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >
    <Button
        android:id="@+id/pop_shoot_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍摄"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"
        />
    <View
        style="@style/CommonLandscapeLine"
        />
    <Button
        android:id="@+id/pop_pick_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相册中选择照片"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/pop_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:textColor="@color/cor1"
        style="?android:attr/borderlessButtonStyle"
        />
    </LinearLayout>
</FrameLayout>
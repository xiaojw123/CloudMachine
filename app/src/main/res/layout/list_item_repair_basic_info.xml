<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/repair_bottom_layoutheight"
        >
        <TextView 
            android:id="@+id/tv_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/repair_bottom_textsize"
            android:textColor="@color/public_color_black"
            android:layout_centerVertical="true"
            android:text="位置"
            android:layout_marginLeft="@dimen/repair_bottom_leftmargin"
            />
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_desc"
            android:textSize="@dimen/repair_bottom_textsize"
            android:textColor="@color/repair_bottom_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_title"
            android:layout_marginLeft="@dimen/repair_bottom_leftmargin2"
            android:text="文一西路998号未来科技城海创园"
            />
    </RelativeLayout>
    <View 
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_line_height"
        android:background="@color/line_bottom_color"
        />

</LinearLayout>

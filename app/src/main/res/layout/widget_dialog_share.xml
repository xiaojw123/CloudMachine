<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_text_progress"
    android:gravity="center_vertical">

    <TextView
        android:layout_marginTop="@dimen/public_textsize2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#121212"
        android:textSize="@dimen/public_textsize1"
        android:layout_marginLeft="@dimen/share_text_margin_left"
        android:text="分享到"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="@dimen/wx_icon_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_session"
                android:layout_marginTop="@dimen/wx_icon_margin_left"
                android:layout_width="@dimen/wx_icon_width"
                android:layout_height="@dimen/wx_icon_width"
                android:background="@drawable/wx_session"
                android:layout_marginBottom="9dp"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6C6C6C"
                android:text="微信"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_timeline"
                android:layout_marginLeft="@dimen/wx_timeline_margin_left"
                android:layout_marginTop="@dimen/wx_icon_margin_left"
                android:layout_width="@dimen/wx_icon_width"
                android:layout_height="@dimen/wx_icon_width"
                android:background="@drawable/wx_timeline"
                android:layout_marginBottom="9dp"/>
            <TextView
                android:layout_marginLeft="@dimen/wx_timeline_marginleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6C6C6C"
                android:gravity="center"
                android:text="微信朋友圈"/>
        </LinearLayout>
    </LinearLayout>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D7D7D7"/>-->

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="取消"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:background="@color/share_bg_color"/>

</LinearLayout>
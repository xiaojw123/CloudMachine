<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
     >

    <ImageView
        android:id="@+id/mnbv"
        android:layout_width="@dimen/loading_image_width"
        android:layout_height="@dimen/loading_image_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/loading_image_marginTop"
        android:background="@drawable/loading_icon" />

    

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/loading_text_marginBottom"
            android:textSize="@dimen/loading_text_size" 
            android:textColor="@color/loading_text"
            android:text="@string/loading_text"
            />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <TextView
        android:id="@+id/a_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="保养建议"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_width"
        android:background="@color/mc_line" />

    <TextView
        android:id="@+id/a_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:text="1、我是液压系统的保养建议"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text2" 
        android:lineSpacingExtra="@dimen/text_line_spacing"
        />

</LinearLayout>
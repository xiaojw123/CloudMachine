<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mc_main_bg"
    android:orientation="vertical" >

    <com.cloudmachine.utils.widgets.TitleView
        android:id="@+id/title_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
        >
    </com.cloudmachine.utils.widgets.TitleView>
    
    <TextView 
        style="@style/TextView.line"
        android:layout_marginTop="@dimen/common_view_gap"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="@dimen/oilamount_oil_m_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_left_gap"
        android:paddingRight="@dimen/common_left_gap"
        android:gravity="center_vertical"
        >
            <!-- <com.cloudmachine.utils.widgets.ArcView2
                        android:id="@+id/arcView"
                        android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
		   				android:background="@color/white"
		   				android:layout_alignParentRight="true"
		   				android:layout_centerVertical="true"
                        /> -->
            <com.cloudmachine.autolayout.widgets.DynamicWave 
                            android:id="@+id/arcView"
                            android:layout_width="@dimen/oil_level_size"
                            android:layout_height="@dimen/oil_level_size"
                            android:layout_alignParentRight="true"
		   					android:layout_centerVertical="true"
                            android:padding="@dimen/public_line_wh"
                            />
        
        <RelativeLayout 
            android:layout_width="match_parent"
			android:layout_height="@dimen/oilamount_oil_big_radius"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@id/arcView"
            >
            <TextView 
                style="@style/TextView.oilamount_big_text"
  				android:layout_alignParentTop="true"
  				android:text="当前油位"
                />
            <LinearLayout 
                android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:layout_alignParentBottom="true"
                >
                <TextView 
                    style="@style/TextView.oilamount_small_text"
  					android:text="剩余"
                    />
                <TextView 
                    android:id="@+id/oil_proportion"
                    style="@style/TextView.oilamount_proportion_text"
  					android:textColor="@color/oil_amount_proportion_text"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <TextView 
        style="@style/TextView.line"
        />
    <TextView 
        style="@style/TextView.line"
        android:layout_marginTop="@dimen/common_top_gap"
        />
       <RelativeLayout 
           android:layout_width="match_parent"
		   android:layout_height="match_parent"
		   android:orientation="vertical"
		   android:background="@color/white"
           >
        <LinearLayout 
            android:id="@+id/chart_title_layout"
            android:layout_width="match_parent"
		   android:layout_height="@dimen/mc_search_listitem_h"
		   android:orientation="vertical"
            >
            <TextView 
            style="@style/TextView.oilamount_big_text"
  				android:text="油位剩余百分比分布"
  				android:gravity="center"
  				android:layout_width="match_parent"
  				android:layout_height="match_parent"
  				android:layout_weight="1"
  				android:layout_gravity="center"
            />
            <TextView 
                style="@style/TextView.oilamount_small_text"
                android:text="单位：%"
  				android:layout_height="match_parent"
  				android:layout_weight="2"
  				android:layout_marginLeft="@dimen/common_left_gap"
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/chart_bottom_layout"
            android:layout_width="match_parent"
		   android:layout_height="@dimen/common_title_left_layout"
		   android:orientation="vertical"
		   android:layout_alignParentBottom="true"
            >
            <TextView 
        style="@style/TextView.line"
        />
            <TextView 
                android:id="@+id/last_date_oil_text"
            	style="@style/TextView.oilamount_big_text"
  				android:text="关机油位"
  				android:gravity="bottom|center_horizontal"
  				android:layout_width="match_parent"
  				android:layout_height="match_parent"
  				android:layout_weight="1"
            />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
  				android:layout_weight="1"
  				android:gravity="center_horizontal|top"
                >
                <TextView 
                style="@style/TextView.oilamount_small_text"
                android:text="剩余"
                />
                <TextView 
                    android:id="@+id/oil_proportion_last"
  					android:textColor="@color/oil_amount_proportion_last_text"
  					style="@style/TextView.oilamount_proportion_text"
                    />
            </LinearLayout>
            
        </LinearLayout>
        
            <FrameLayout 
                android:layout_width="match_parent"
		   		android:layout_height="match_parent"
		   		android:background="@color/white"
		   		android:layout_above="@id/chart_bottom_layout"
		   		android:layout_below="@id/chart_title_layout"
                >
                        
                    <com.github.mikephil.charting.charts.LineChart
        				android:id="@+id/linechart"
        				android:layout_width="match_parent"
        				android:layout_height="match_parent"
        				/>
                    <RelativeLayout 
                        android:id="@+id/add_chart_layout"
        				android:layout_width="match_parent"
        				android:layout_height="match_parent"
                        >
                        
                    </RelativeLayout>
                
            </FrameLayout>
            
       </RelativeLayout>
	
</LinearLayout>
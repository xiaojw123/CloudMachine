        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 图标加上右上角小圆点 -->

        <RelativeLayout
            android:id="@+id/message_image"
            android:layout_width="@dimen/message_rl_size1"
            android:layout_height="@dimen/message_rl_size1"
            android:layout_marginBottom="@dimen/message_rl_topmargin2"
            android:layout_marginLeft="@dimen/image_leftmargin"
            android:layout_marginTop="@dimen/message_rl_topmargin2">

            <ImageView
                android:id="@+id/message_body"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <View
                android:id="@+id/message_oval"
                android:layout_width="@dimen/oval_message_size"
                android:layout_height="@dimen/oval_message_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/oval_message" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_message_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/message_rl_leftmargin1">


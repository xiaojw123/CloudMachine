            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/invite_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_textsize3" />
                </LinearLayout>

                <TextView
                    android:id="@+id/message_info_other_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detecting_item_leftmargin4"
                    android:singleLine="true"
                    android:textColor="@color/oval_message_color2"
                    />
                <LinearLayout
                    android:id="@+id/rl_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detecting_item_leftmargin4"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >


                    <TextView
                        android:id="@+id/info_inv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/public_textsize2" />

                    <TextView
                        android:id="@+id/message_list_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/public_textsize2" />


                    <TextView
                        android:id="@+id/device_name_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/oval_message_color2"
                        android:textSize="@dimen/public_textsize2" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="7"
                        android:singleLine="true"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/public_textsize2" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/oval_message_color2"
                        android:textSize="@dimen/public_textsize2" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/public_textsize7"
                android:layout_marginTop="3dp"
                android:textColor="@color/public_text_color2"
                android:textSize="@dimen/public_textsize6" />
        </RelativeLayout>
    </LinearLayout>


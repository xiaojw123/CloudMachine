<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.cloudmachine.widget.CommonTitleView
        android:id="@+id/maintenance_sup_titleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title_name="机修兵"
        />

    <com.amap.api.maps2d.MapView
        android:id="@+id/home_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/maintenance_sup_titleview"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/repair_btn"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardMaxElevation="3dp"
        >
        <TextView
            android:id="@+id/maintence_cur_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_map_loc"
            android:drawablePadding="9dp"
            android:layout_gravity="center"
            android:maxEms="18"
            android:singleLine="true"
            />


    </android.support.v7.widget.CardView>

    <com.cloudmachine.autolayout.widgets.RadiusButtonView
        android:id="@+id/repair_btn"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        app:rbtn_fillColor_dw="@color/public_b_20"
        app:rbtn_fillColor_nm="@color/public_blue_bg"
        app:rbtn_strokeColor="@color/public_blue_bg"
        app:rbtn_text="@string/btn_repair_now"
        app:rbtn_textColor="@color/public_white"
        app:rbtn_textSize="@dimen/public_textsize1" />


</RelativeLayout>
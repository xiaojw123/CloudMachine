<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/public_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.cloudmachine.ui.home.activity.MessageDetailActivity">

    <com.cloudmachine.widget.CommonTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_title_name="@string/system_message"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_size_20"
        android:paddingRight="@dimen/dimen_size_20"
        android:paddingTop="@dimen/dimen_size_13"
        android:paddingBottom="@dimen/dimen_size_13"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/message_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textColorLink="@color/cor8"
            android:textColor="@color/cor10"
            android:textSize="@dimen/text_size_14_sp"
            />

        <!--<com.cloudmachine.widget.MyTextView-->
            <!--android:id="@+id/message_detail_content"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/message_detail_time"
            android:layout_marginTop="@dimen/dimen_size_23"
            android:textColor="@color/cor11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    

    


</LinearLayout>

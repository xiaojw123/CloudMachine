<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mc_main_bg"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mc_main_bg"
    >

    <com.cloudmachine.utils.widgets.TitleView
        android:id="@+id/title_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
        >
    </com.cloudmachine.utils.widgets.TitleView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/mc_main_bg"
            >
            <TextView 
			    android:layout_width="match_parent"
		    	android:layout_height="35dp"
		    	android:paddingLeft="15dp"
		    	android:paddingRight="15dp"
		    	android:gravity="bottom"
		    	android:text="基本信息"
		    	style="@style/TextView.AddDevice_Text1"
		    	android:paddingBottom="5dp"
			    />
            <TextView 
	     		android:layout_width="match_parent"
				android:layout_height="@dimen/common_line_width"
				android:background="@color/mc_engine_line"
                />
            <com.cloudmachine.utils.widgets.AddDeviceItemView
                android:id="@+id/device_name"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="名称"
		    	cloudm:hint="请给机器取个名字吧"
		    	cloudm:required="true"
                ></com.cloudmachine.utils.widgets.AddDeviceItemView>
            <com.cloudmachine.utils.widgets.AddDeviceItemView
                android:id="@+id/device_type"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="机型"
		    	cloudm:hint="请选择机器机型"
		    	cloudm:required="true"
		    	cloudm:arrow="true"
                ></com.cloudmachine.utils.widgets.AddDeviceItemView>
            <com.cloudmachine.utils.widgets.AddDeviceItemView
                android:id="@+id/device_brand1"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="品牌"
		    	cloudm:hint="请选择机器品牌"
		    	cloudm:required="true"
		    	cloudm:arrow="true"
                ></com.cloudmachine.utils.widgets.AddDeviceItemView>
            <com.cloudmachine.utils.widgets.AddDeviceItemView
                android:id="@+id/device_model"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="型号"
		    	cloudm:hint="请选择机器型号"
		    	cloudm:required="true"
		    	cloudm:arrow="true"
		    	cloudm:last="true"
                ></com.cloudmachine.utils.widgets.AddDeviceItemView>
            <LinearLayout 
                android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_marginTop="30dp"
		    	android:paddingLeft="@dimen/common_view_gap"
		    	android:paddingRight="@dimen/common_view_gap"
		    	android:orientation="vertical"
                >
                <RelativeLayout 
                    android:layout_width="match_parent"
		    		android:layout_height="wrap_content"
                    >
                    <LinearLayout 
                        android:layout_width="match_parent"
		    			android:layout_height="wrap_content"
		    			android:minHeight="120dp"
		    			android:orientation="vertical"
                        >
                        <com.cloudmachine.utils.widgets.RadiusButtonView
				        android:id="@+id/addPhotoButton"
				        android:layout_width="match_parent"
				        android:layout_height="44dp"
				        cloudm:rbtn_text="添加照片"
				        cloudm:rbtn_strokeColor="@color/mc_rad_but_white_stroke"
				        cloudm:rbtn_fillColor_nm="@color/mc_rad_but_white_nm"
				        cloudm:rbtn_fillColor_dw="@color/mc_rad_but_dw_1"
				        cloudm:rbtn_textColor="@color/black"
				        ></com.cloudmachine.utils.widgets.RadiusButtonView>
   <com.cloudmachine.utils.widgets.ImageArrayView
                        android:id="@+id/image_array_view"
                        android:layout_width="match_parent"
				        android:layout_height="match_parent"
                        android:visibility="gone"
                        ></com.cloudmachine.utils.widgets.ImageArrayView>
   </LinearLayout>
                </RelativeLayout>
                <LinearLayout 
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
		    		android:layout_height="wrap_content"
		    		android:orientation="vertical"
		    		android:gravity="center_horizontal"
		    		android:layout_marginBottom="25dp"
		    		android:layout_marginTop="15dp"
                    >
                    <TextView 
                        android:id="@+id/more_text"
                        android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:text="为了让你得到更专业的数据分析，请"
		    			style="@style/TextView.Meter_Text2"
                        />
                    <com.cloudmachine.utils.widgets.RadiusButtonView
				        android:id="@+id/rMoreInfoButton"
				        android:layout_width="match_parent"
				        android:layout_height="44dp"
				        android:layout_marginTop="15dp"
				        cloudm:rbtn_text="填写详细信息"
				        cloudm:rbtn_strokeColor="@color/mc_rad_but_blue_stroke"
				        cloudm:rbtn_fillColor_nm="@color/mc_rad_but_blue_nm"
				        ></com.cloudmachine.utils.widgets.RadiusButtonView>

                </LinearLayout>
                
            </LinearLayout>
         </LinearLayout>
    </ScrollView>
	    
</LinearLayout>
<RelativeLayout 
    android:id="@+id/toPhoto_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64000000"
    android:visibility="gone"
    android:clickable="true"
    >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/mc_tophoto_bg"
    	android:layout_alignParentBottom="true"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
    	android:orientation="vertical"
        >
        <com.cloudmachine.utils.widgets.RadiusButtonView
			android:id="@+id/toPhotoButton"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			cloudm:rbtn_text="拍照"
			cloudm:rbtn_strokeColor="@color/mc_rad_but_white_stroke"
			cloudm:rbtn_fillColor_nm="@color/mc_rad_but_white_nm"
			cloudm:rbtn_fillColor_dw="@color/mc_rad_but_dw_1"
			cloudm:rbtn_textColor="@color/black"
			android:layout_marginTop="20dp"
			></com.cloudmachine.utils.widgets.RadiusButtonView>
        <com.cloudmachine.utils.widgets.RadiusButtonView
			android:id="@+id/toChangeButton"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			cloudm:rbtn_text="从手机相册选择"
			cloudm:rbtn_strokeColor="@color/mc_rad_but_white_stroke"
			cloudm:rbtn_fillColor_nm="@color/mc_rad_but_white_nm"
			cloudm:rbtn_fillColor_dw="@color/mc_rad_but_dw_1"
			cloudm:rbtn_textColor="@color/black"
			android:layout_marginTop="8dp"
			></com.cloudmachine.utils.widgets.RadiusButtonView>
        <com.cloudmachine.utils.widgets.RadiusButtonView
			android:id="@+id/cancelButton"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			cloudm:rbtn_text="取消"
			cloudm:rbtn_strokeColor="@color/mc_rad_but_grey_stroke"
			cloudm:rbtn_fillColor_nm="@color/mc_rad_but_grey_nm"
			cloudm:rbtn_fillColor_dw="@color/mc_rad_but_dw_1"
			cloudm:rbtn_textColor="@color/white"
			android:layout_marginTop="22dp"
			android:layout_marginBottom="26dp"
			></com.cloudmachine.utils.widgets.RadiusButtonView>
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>
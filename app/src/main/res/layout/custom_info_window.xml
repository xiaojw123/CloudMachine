<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/custom_info_window_layout"
    >
    <FrameLayout
        android:id="@+id/custom_info_window_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_marker_win"
        android:paddingLeft="@dimen/dimen_size_20"
        android:paddingRight="@dimen/dimen_size_20"
        android:paddingBottom="@dimen/dimen_size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/ciw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="12"
                android:singleLine="true"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/common_text2" />
        </FrameLayout>


</FrameLayout>
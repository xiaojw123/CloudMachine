<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/custom_info_window_layout"
    >
    <LinearLayout
        android:id="@+id/custom_info_window_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_pop_bg1"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="46dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/badge"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="12dp"
            android:visibility="gone"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="fdasdfasfdasfdasf"
                android:textColor="#010101"
                android:textSize="@dimen/common_text1" />

            <TextView
                android:id="@+id/snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="21"
                android:singleLine="true"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/common_text2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_r_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mc_arrow_r" />

    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_106"
    android:layout_marginBottom="@dimen/dimen_size_26"
    android:background="@drawable/bg_coupon_vaild"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/item_coupon_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_coupon_valid_price"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:text="Â¥"
        android:textColor="@color/cor2"
        android:textSize="@dimen/text_size_18_sp" />

    <TextView
        android:id="@+id/item_coupon_valid_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_size_5"
        android:layout_toRightOf="@+id/item_coupon_valid"
        android:textColor="@color/cor2"
        android:textSize="@dimen/text_size_37_sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120dp"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_coupon_valid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cor8"
            android:textSize="@dimen/text_size_16_sp" />
            <TextView
                android:id="@+id/item_coupon_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cor2"
                android:textSize="@dimen/text_size_14_sp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_coupon_vaild_limitInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_11"
            android:textColor="@color/cor10"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:id="@+id/item_coupon_validity_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:textColor="@color/cor2"
            android:textSize="@dimen/text_size_13_sp"
            android:visibility="gone"
            />
    </LinearLayout>




</RelativeLayout>






<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commom_bg"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_main"
        android:padding="8dp" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:shadowColor="#80000000"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="3"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/common_title_textsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" >

          
            
              <!--   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <EditText
                    android:id="@+id/phone_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:enabled="false"
                    android:hint="用户手机号" />
            </LinearLayout>  -->
              <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="00dp" >

                
                          <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:paddingLeft="15dp"
            android:textColor="#000000"
             android:textSize="18.0dip"
            android:layout_gravity="center"/>
              
              <com.cloudmachine.utils.widgets.ClearEditTextView
                android:id="@+id/phone_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint=""
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18.0dip" />
            </LinearLayout>
            
             <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_line_width"
                android:background="@color/line_bg" />
            <LinearLayout
                android:id="@+id/code_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                     <LinearLayout
                       android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                android:layout_marginTop="15dp" >

                
                          <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:paddingLeft="15dp"
            android:textColor="#000000"
             android:textSize="18.0dip"
            android:layout_gravity="center"/>
              
              <com.cloudmachine.utils.widgets.ClearEditTextView
                android:id="@+id/validate_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint=""
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18.0dip" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/validate_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:text="获取验证码" />
                </LinearLayout>
            </LinearLayout>
                <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
      		<LinearLayout
      		    android:id="@+id/old_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                   <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:paddingLeft="15dp"
            android:textColor="#000000"
             android:textSize="18.0dip"
            android:layout_gravity="center"/>
              
              <com.cloudmachine.utils.widgets.ClearEditTextView
                android:id="@+id/oldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18.0dip" />
            </LinearLayout>
                <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                
                          <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:paddingLeft="15dp"
            android:textColor="#000000"
             android:textSize="18.0dip"
            android:layout_gravity="center"/>
              
              <com.cloudmachine.utils.widgets.ClearEditTextView
                android:id="@+id/new_passwrod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18.0dip" />
            </LinearLayout>
               <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="10dp" >

                       <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:paddingLeft="15dp"
            android:textColor="#000000"
             android:textSize="18.0dip"
            android:layout_gravity="center"/>
              
              <com.cloudmachine.utils.widgets.ClearEditTextView
                android:id="@+id/confirm_passwrod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18.0dip" />
            </LinearLayout>
      <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/find_btn"
                android:text="提交"
                android:textColor="#ffffff"
                android:background="@drawable/btn_blue_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
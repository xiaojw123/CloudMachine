<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/public_white"
    >
<RelativeLayout 
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    >
    <TextView 
        android:id="@+id/title_line"
        android:layout_width="match_parent"
    	android:layout_height="@dimen/public_line_wh"
    	android:background="@color/public_line"
    	android:layout_alignParentBottom="true"
        />
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"

    android:orientation="horizontal"
    >
    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/btn_back"
        android:layout_width="@dimen/public_textsize8"
        android:layout_height="@dimen/public_textsize8"
        android:src="@drawable/btn_back_selector"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <TextView 
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="搜索"
        android:textSize="15dp"
        android:layout_gravity="center_vertical"
        android:textColor="@drawable/bg_text_validate"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        />
     <RelativeLayout
         android:layout_marginLeft="@dimen/second_margintop"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/radius_button_search" 
        android:layout_toLeftOf="@id/button_cancel"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_back"
        >

        <ImageView
            android:id="@+id/icon_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/mc_search_nm" />

        <ImageView
            android:id="@+id/icon_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/mc_search_clear" 
            android:scaleType="centerInside"
            android:paddingLeft="@dimen/common_view_gap"
            android:paddingRight="@dimen/common_view_gap"
            android:visibility="gone"
            />

       <EditText
                android:id="@+id/et_search_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:textColorHint="#929292"
                android:imeOptions="actionSearch"
                android:keepScreenOn="true"
                android:singleLine="true"
                android:textColor="@color/public_black"
                android:textSize="16dp" 
                android:layout_toLeftOf="@id/icon_clear"
                android:layout_toRightOf="@id/icon_s"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                >
            </EditText>
        
    </RelativeLayout>
    
</RelativeLayout>
   

</RelativeLayout> 
 <com.cloudmachine.utils.widgets.XListView
        android:id="@+id/noti_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_layout" />

</RelativeLayout>
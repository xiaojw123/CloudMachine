<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_yuan_morelist">

    <RelativeLayout
        android:id="@+id/qwert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/info_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/male" />

        <TextView
            android:id="@+id/info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/info_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/testUser"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/info_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2014-12-12 15:20"
            android:textColor="@color/time"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/asdfg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:layout_below="@+id/qwert"
         >

        <ImageView
            android:id="@+id/blog_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

          <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
  
                       <TextView
            android:id="@+id/back_content"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/item_content"
            android:text="我是评论内容"
            android:textSize="18sp" />
       </LinearLayout>
    </RelativeLayout>

     
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/white"
        android:layout_below="@+id/asdfg">
        
             <LinearLayout
            android:id="@+id/contentlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_style_item">

       <ImageView
           android:id="@+id/content_img"
           android:layout_width="81dp"
           android:layout_height="81dp"
           android:scaleType="centerCrop"
           android:src="@drawable/default_img" />
            
            <LinearLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="81dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="#f7f7f7" >
            
                   
           <TextView
            android:id="@+id/name_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/testUser"
            android:textSize="16sp" />
                       
            <TextView
            android:id="@+id/bl_content"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/item_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text=""
            android:textSize="14sp" />
                   
            </LinearLayout>

           
        </LinearLayout>  
       
       
   </LinearLayout>
</RelativeLayout>
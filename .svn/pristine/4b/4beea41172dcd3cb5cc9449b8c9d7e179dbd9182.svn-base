<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.cloudmachine.autolayout.widgets.TitleView>

    <LinearLayout
        android:id="@+id/ll_payment_faild"
        android:layout_below="@id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_payment_faild"
            android:src="@drawable/payment_faild"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_payment_faild"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="订单支付失败"
            />

        <Button
            android:id="@+id/retry_pay"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:text="重新支付"
            android:background="@drawable/btn_payment_faild"
            android:layout_marginTop="28dp"
            android:textColor="#0097df"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_payment_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_payment_success"
            android:src="@drawable/payment_success"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_payment_success"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="订单支付成功"
            />
        <TextView
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/public_black_9"
            android:text="恭喜你! 购买成功, 等待系统确认订单信息我们的客服就就会与你联系。"
            />


    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    >

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/mnbv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout_about"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/about_image_marginTop"
        android:src="@drawable/about_logo" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mnbv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/about_text_marginTo_image"
        android:text="云机械 1.0 版本"
        android:textColor="@color/about_version_text"
        android:textSize="@dimen/public_title_textsize" />


    

    <LinearLayout
        android:id="@+id/describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/loading_text_marginBottom"
        android:orientation="vertical" >
        
       <!-- <com.cloudmachine.autolayout.widgets.RadiusButtonView
        android:id="@+id/checkBtn"
        android:layout_width="@dimen/about_button_width"
        android:layout_height="@dimen/about_button_height"
        android:layout_gravity="center"
        cloudm:rbtn_strokeColor="@color/about_button_stroke"
        cloudm:rbtn_fillColor_nm="@color/public_white"
        cloudm:rbtn_fillColor_dw="@color/about_button_stroke"
        cloudm:rbtn_text="@string/about_button_text"
        cloudm:rbtn_textColor="@color/public_black"
        cloudm:rbtn_textSize="@dimen/about_button_textsize" />-->
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="400-008-0581"
            android:textColor="#c3c3c3"
            android:textSize="14sp" 
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/loading_text_size" 
            android:textColor="@color/loading_text"
            android:text="@string/loading_text" 
            android:layout_marginTop="@dimen/about_text_marginTo_button"
            />

        <RelativeLayout
            android:id="@+id/check_version"
            style="@style/layout_item">

            <TextView
                style="@style/personal_left_text"
                android:text="版本更新"
                />
           <!-- <TextView
                style="@style/personal_edit_text"
                android:layout_toLeftOf="@id/arrow_right"
                android:text="当前已是最新版本"
                />-->
            <ImageView
                android:id="@+id/arrow_right"
                style="@style/personal_arrow_image"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/use_help"
            style="@style/layout_item">

            <TextView
                style="@style/personal_left_text"
                android:text="使用帮助"
                />

            <ImageView
                style="@style/personal_arrow_image"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feedback"
            style="@style/layout_item">

            <TextView
                style="@style/personal_left_text"
                android:text="意见反馈"
                />

            <ImageView
                style="@style/personal_arrow_image"/>
        </RelativeLayout>

    </LinearLayout>

    
</RelativeLayout>
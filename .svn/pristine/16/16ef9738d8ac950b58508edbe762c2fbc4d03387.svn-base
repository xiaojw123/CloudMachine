<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    android:orientation="vertical" >

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.cloudmachine.autolayout.widgets.RadiusButtonView
            android:id="@+id/btn_bottom"
            android:layout_width="@dimen/repair_button_width"
            android:layout_height="@dimen/repair_button_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/public_layout_padding_left"
            cloudm:rbtn_fillColor_dw="@color/public_b_20"
            cloudm:rbtn_fillColor_nm="@color/public_blue_bg"
            cloudm:rbtn_strokeColor="@color/public_blue_bg"
            cloudm:rbtn_text="@string/btn_radio_submit"
            cloudm:rbtn_textColor="@color/public_white"
            cloudm:rbtn_textSize="@dimen/public_textsize1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_bottom"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/line_layout"
                android:layout_marginTop="@dimen/public_layout_padding_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/public_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/public_layout_padding_left" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_layout_item_height" >

                    <TextView
                        android:layout_width="@dimen/update_pwd_left_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="旧密码"
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_textsize1" />

                    <com.cloudmachine.utils.widgets.ClearEditTextView
                        android:id="@+id/old_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_textsize1" 
                        android:inputType="textPassword"
                        />
                </LinearLayout>

                <LinearLayout style="@style/line_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_layout_item_height" >

                    <TextView
                        android:layout_width="@dimen/update_pwd_left_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="新密码"
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_textsize1" />

                    <com.cloudmachine.utils.widgets.ClearEditTextView
                        android:id="@+id/new_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_textsize1" 
                        android:inputType="textPassword"
                        />
                </LinearLayout>

                <LinearLayout style="@style/line_layout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_layout_item_height" >

                    <TextView
                        android:layout_width="@dimen/update_pwd_left_title_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="确认密码"
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_textsize1" />

                    <com.cloudmachine.utils.widgets.ClearEditTextView
                        android:id="@+id/confirm_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_textsize1" 
                        android:inputType="textPassword"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/line_layout" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
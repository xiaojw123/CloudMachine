<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:cloudm="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/public_bg"
              android:orientation="vertical"
    >

    <com.cloudmachine.autolayout.widgets.TitleView
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/public_bg"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:id="@+id/imageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/personal_image_layout_height"
                        android:background="@drawable/btn_style_item"
                        >

                        <TextView
                            android:id="@+id/edit_text4"
                            style="@style/personal_left_text"
                            android:text="头像"
                            />

                        <ImageView
                            android:id="@+id/arrowTip0"
                            style="@style/personal_arrow_image"
                            />

                        <ImageView
                            android:id="@+id/image_avator"
                            android:layout_width="@dimen/personal_image_wh"
                            android:layout_height="@dimen/personal_image_wh"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/personal_image_to_arrow"
                            android:layout_toLeftOf="@+id/arrowTip0"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_img"/>


                    </RelativeLayout>

                    <LinearLayout
                        style="@style/line_layout"
                        android:layout_marginLeft="@dimen/public_layout_padding_left"
                        />

                    <RelativeLayout
                        android:id="@+id/phoneLayout"
                        style="@style/layout_item"
                        >

                        <TextView
                            android:id="@+id/f11"
                            style="@style/personal_left_text"
                            android:text="账号"
                            />

                        <TextView
                            android:id="@+id/edit_textPhone"
                            style="@style/personal_edit_text"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/public_layout_padding_left"
                            android:background="@null"
                            android:text=""
                            />

                    </RelativeLayout>

                    <LinearLayout
                        style="@style/line_layout"
                        android:layout_marginLeft="@dimen/public_layout_padding_left"
                        />

                    <RelativeLayout
                        android:id="@+id/nickLayout"
                        style="@style/layout_item"
                        >

                        <TextView
                            android:id="@+id/f5"
                            style="@style/personal_left_text"
                            android:text="昵称"
                            />

                        <TextView
                            android:id="@+id/nickname"
                            style="@style/personal_edit_text"
                            android:layout_marginRight="@dimen/public_layout_padding_left"
                            android:layout_toLeftOf="@+id/arrowTip1"
                            android:background="@null"
                            android:text=""
                            />

                        <ImageView
                            android:id="@+id/arrowTip1"
                            style="@style/personal_arrow_image"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        style="@style/line_layout"
                        android:layout_marginLeft="@dimen/common_left_gap"
                        />


                    <RelativeLayout
                        android:id="@+id/my_pwd"
                        style="@style/layout_item">

                        <TextView
                            style="@style/personal_left_text"
                            android:text="修改密码"
                            />

                        <ImageView
                            style="@style/personal_arrow_image"/>
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/privacyInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/public_bg"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/personal_item_padding"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/scoreLayout"
                                style="@style/layout_item"
                                >

                                <TextView
                                    style="@style/personal_left_text"
                                    android:text="积分"
                                    />

                                <TextView
                                    android:id="@+id/score_text"
                                    style="@style/personal_edit_text"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/public_layout_padding_left"
                                    />

                            </RelativeLayout>

                            <LinearLayout
                                style="@style/line_layout"
                                android:layout_marginLeft="@dimen/public_layout_padding_left"
                                />
                            <RelativeLayout
                                style="@style/layout_item"
                                android:id="@+id/help"
                                >

                                <TextView
                                    style="@style/personal_left_text"
                                    android:text="关于与帮助"
                                    />

                                <ImageView
                                    style="@style/personal_arrow_image"/>

                            </RelativeLayout>

                            <LinearLayout
                                style="@style/line_layout"
                                android:layout_marginLeft="@dimen/public_layout_padding_left"
                                />

                            <RelativeLayout
                                style="@style/layout_item"
                                android:id="@+id/share_app"
                                >

                                <TextView
                                    style="@style/personal_left_text"
                                    android:text="分享APP"
                                    />


                            </RelativeLayout>

                            <LinearLayout
                                style="@style/line_layout"
                                android:layout_marginLeft="@dimen/public_layout_padding_left"
                                />
                            <RelativeLayout
                                android:id="@+id/set_suggest"
                                style="@style/layout_item"
                                android:visibility="gone"
                                >

                                <TextView
                                    style="@style/personal_left_text"
                                    android:text="意见反馈"
                                    />

                                <ImageView
                                    style="@style/personal_arrow_image"
                                    />
                            </RelativeLayout>

                            <LinearLayout
                                style="@style/line_layout"
                                android:layout_marginLeft="@dimen/public_layout_padding_left"
                                />

                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/set_qrcode"
                                style="@style/layout_item"
                                >

                                <TextView
                                    style="@style/personal_left_text"
                                    android:text="二维码"
                                    />

                                <ImageView
                                    style="@style/personal_arrow_image"/>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/personal_item_padding"
                                android:background="@color/public_bg"/>

                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/about_cloud"
                                style="@style/layout_item"
                                >

                                <TextView
                                    android:id="@+id/f12"
                                    style="@style/personal_left_text"
                                    android:text="关于"
                                    />

                                <ImageView
                                    android:id="@+id/arrowTip5"
                                    style="@style/personal_arrow_image"/>
                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/personal_item_padding"
                            android:background="@color/public_bg"/>

                        <LinearLayout
                            android:id="@+id/exitlayout"
                            style="@style/layout_item"
                            android:gravity="center_horizontal"
                            >

                            <Button
                                android:id="@+id/exitLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:clickable="false"
                                android:text="退出登录"
                                android:textColor="@color/black"
                                android:textSize="@dimen/public_textsize1"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/score_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/commom_transparent_bg"
                android:orientation="vertical"
                android:paddingLeft="@dimen/info_score_left_gap"
                android:paddingRight="@dimen/info_score_left_gap"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_button_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/common_left_gap"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/score_icon"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_view_min_gap"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/score_text1"
                                android:textColor="@color/chart_Limit_line"
                                android:textSize="@dimen/info_score_text_size1"
                                />

                            <TextView
                                android:id="@+id/score_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_view_min_gap"
                                android:text=""
                                android:textColor="@color/chart_Limit_line"
                                android:textSize="@dimen/info_score_text_size2"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_view_min_gap"
                            android:text="@string/score_text2"
                            android:textColor="@color/personFont"
                            android:textSize="@dimen/info_score_text_size1"
                            />

                        <com.cloudmachine.utils.widgets.RadiusButtonView
                            android:id="@+id/score_button"
                            android:layout_width="@dimen/info_score_button_width"
                            android:layout_height="@dimen/info_score_button_height"
                            android:layout_marginTop="@dimen/common_view_min_gap"
                            cloudm:rbtn_fillColor_dw="@color/mc_rad_but_dw_1"
                            cloudm:rbtn_fillColor_nm="@color/chart_Limit_line"
                            cloudm:rbtn_roundRadius="15dp"
                            cloudm:rbtn_strokeColor="@color/chart_Limit_line"
                            cloudm:rbtn_text="@string/score_text3"
                            cloudm:rbtn_textColor="@color/white"
                            cloudm:rbtn_textSize="@dimen/info_score_text_size3"
                            >
                        </com.cloudmachine.utils.widgets.RadiusButtonView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>
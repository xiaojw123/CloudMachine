<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    android:orientation="vertical" >
    <!-- 搜索栏布局 -->

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="@dimen/main1_search_layout_height"
    android:background="@color/public_bg"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/main1_search_padding"
    android:layout_marginRight="@dimen/main1_search_padding"
    >
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main1_search_height"
        android:background="@drawable/radius_button_white"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/main1_search_image_wh"
            android:layout_height="@dimen/main1_search_image_wh"
            android:background="@drawable/search_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main1_search"
            android:textColor="@color/main1_search_text"
            android:textSize="@dimen/public_textsize3" 
            android:layout_marginLeft="@dimen/main1_search_image_text_padding"
            />
    </LinearLayout>
</LinearLayout>
    
    <!-- 新手引导，我要云盒子布局 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main1_search_padding"
    	android:layout_marginRight="@dimen/main1_search_padding"
    	android:layout_marginBottom="@dimen/main1_guide_marginBottom"
        android:orientation="horizontal" >
		<LinearLayout 
		    android:layout_width="match_parent"
            android:layout_height="@dimen/main1_guide_height"
            android:layout_weight="1"
		    >
		    <LinearLayout
            android:id="@+id/beginners_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_main1_guide"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/main1_guide1_image1_width"
                android:layout_height="@dimen/main1_guide1_image1_height"
                android:background="@drawable/main1_guide1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main1_guide1_image_to_text"
                android:text="@string/main1_guide1"
                android:textColor="@color/public_black_5"
                android:textSize="@dimen/public_textsize3" />
        </LinearLayout>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="@dimen/public_layout_padding_left"
            android:layout_height="@dimen/main1_guide_height"
		    >
		    
		</LinearLayout>
        <LinearLayout 
		    android:layout_width="match_parent"
            android:layout_height="@dimen/main1_guide_height"
            android:layout_weight="1"
		    >
		    <LinearLayout
            android:id="@+id/cloudm_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_main1_guide"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/main1_guide1_image2_width"
                android:layout_height="@dimen/main1_guide1_image2_height"
                android:background="@drawable/main1_guide2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main1_guide1_image_to_text"
                android:text="@string/main1_guide2"
                android:textColor="@color/public_black_5"
                android:textSize="@dimen/public_textsize3" />
        </LinearLayout>
		 </LinearLayout> 

        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main1_list_title_height" 
        android:background="@color/public_white"
        >

        <ImageView
            android:id="@+id/iv_device_list"
            android:layout_width="@dimen/main1_list_title_icon_width"
            android:layout_height="@dimen/main1_list_title_icon_height"
            android:background="@drawable/main1_list_title_icon"
            android:layout_marginLeft="@dimen/public_layout_padding_left"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main1_search_padding"
            android:layout_toRightOf="@id/iv_device_list"
            android:text="@string/main1_list_title"
            android:textColor="@color/public_black"
            android:textSize="@dimen/public_textsize1" 
            android:layout_centerVertical="true"
            />
		<LinearLayout 
		    android:id="@+id/iv_map_layout"
		    android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true" 
            android:paddingRight="@dimen/public_layout_padding_left"
            android:paddingLeft="@dimen/main1_list_title_map_width"
		    >
		    <ImageView
            android:id="@+id/iv_map"
            android:layout_width="@dimen/main1_list_title_map_width"
            android:layout_height="@dimen/main1_list_title_map_height"
            android:background="@drawable/bg_btn_main_map"
            />
		</LinearLayout>
        
    </RelativeLayout> 
	<LinearLayout
        style="@style/line_layout"
        android:layout_marginBottom="@dimen/public_line_wh"
        />
</LinearLayout>

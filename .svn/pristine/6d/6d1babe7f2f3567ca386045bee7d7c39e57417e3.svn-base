<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mc_main_bg"
    android:orientation="vertical"
    >

    <com.cloudmachine.utils.widgets.TitleView
        android:id="@+id/title_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
        >
    </com.cloudmachine.utils.widgets.TitleView>
	<TextView 
	    android:layout_width="match_parent"
    	android:layout_height="35dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
    	android:gravity="bottom"
    	android:text="该成员的角色"
    	android:textColor="#a0a0a0"
    	android:textSize="16dp"
    	android:paddingBottom="3dp"
	    />
	<TextView 
     		android:layout_width="match_parent"
			android:layout_height="@dimen/common_line_width"
			android:background="@color/mc_engine_line"
        	/>
	<RelativeLayout 
	    android:id="@+id/nodes_layout"
	    android:layout_width="match_parent"
    	android:layout_height="44dp"
    	android:background="@color/white"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
	    >
	    <ImageView 
	        android:id="@+id/arrow"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="@drawable/mc_arrow_r"
    		android:layout_alignParentRight="true"
    		android:layout_centerVertical="true"
	        />
	    <TextView 
	        android:id="@+id/name"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		style="@style/TextView.Meter_Text2"
    		android:text="岗位名称"
    		android:layout_centerVertical="true"
    		android:layout_alignParentLeft="true"
	        />
	    <TextView 
	        android:id="@+id/quarters_text"
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="维修人员"
    		android:textColor="#a0a0a0"
    		android:textSize="16dp"
    		android:layout_toLeftOf="@id/arrow"
    		android:layout_toRightOf="@id/name"
    		android:gravity="right"
    		android:layout_centerVertical="true"
	        />
	</RelativeLayout>
	<TextView 
     		android:layout_width="match_parent"
			android:layout_height="@dimen/common_line_width"
			android:background="@color/mc_engine_line"
        	/>
	<com.cloudmachine.utils.widgets.AddDeviceItemView
                android:id="@+id/member_role_remark"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="备注"
		    	cloudm:hint=""
		    	cloudm:required="false"
		    	cloudm:arrow="true"
		    	cloudm:last="true"
                ></com.cloudmachine.utils.widgets.AddDeviceItemView>
	<TextView 
	    android:layout_width="match_parent"
    	android:layout_height="40dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
    	android:gravity="bottom"
    	android:text="该成员权限管理"
    	android:textColor="#a0a0a0"
    	android:textSize="16dp"
    	android:paddingBottom="3dp"
	    />
	<TextView 
     		android:layout_width="match_parent"
			android:layout_height="@dimen/common_line_width"
			android:background="@color/mc_engine_line"
        	/>
    <ListView
        android:id="@+id/permission_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/common_line_width"
        android:divider="@color/mc_line"
        />
    <TextView 
     		android:layout_width="match_parent"
			android:layout_height="@dimen/common_line_width"
			android:background="@color/mc_engine_line"
        	/>
    <com.cloudmachine.utils.widgets.RadiusButtonView
        android:id="@+id/delRButton"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="25dp"
        ></com.cloudmachine.utils.widgets.RadiusButtonView>

</LinearLayout>
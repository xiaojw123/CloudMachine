<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height" >

        <ImageView
            android:id="@+id/iv_repair_schedual"
            android:layout_width="@dimen/repair_image_size"
            android:layout_height="@dimen/repair_image_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/header_leftmargin"
            android:src="@drawable/repair_schedual" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/repair_text_leftmargin"
            android:layout_toRightOf="@id/iv_repair_schedual"
            android:text="维修进度"
            android:textColor="@color/public_color_black"
            android:textSize="@dimen/repair_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@id/rl_header"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_schedual"
            android:layout_width="@dimen/repair_rl_width"
            android:layout_height="@dimen/public_listview_height" >

            <ImageView
                android:id="@+id/iv_circle_unselect"
                android:layout_width="@dimen/circle_unselect_size"
                android:layout_height="@dimen/circle_unselect_size"
                android:layout_centerInParent="true"
                android:src="@drawable/schedual_circle_unselect" />

            <View
                android:id="@+id/line_above"
                android:layout_width="@dimen/line_width"
                android:layout_height="@dimen/line_height"
                android:layout_above="@id/iv_circle_unselect"
                android:layout_centerHorizontal="true"
                android:background="@color/line_color" />

            <View
                android:id="@+id/line_below"
                android:layout_width="@dimen/line_width"
                android:layout_height="@dimen/line_height"
                android:layout_below="@id/iv_circle_unselect"
                android:layout_centerHorizontal="true"
                android:background="@color/line_color" />

            <ImageView
                android:id="@+id/iv_cilcle_select"
                android:layout_width="@dimen/cicle_select_size"
                android:layout_height="@dimen/cicle_select_size"
                android:layout_centerInParent="true"
                android:src="@drawable/schedual_circle_select"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/rl_right_width"
            android:layout_height="@dimen/public_listview_height" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_above"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已到达，技师王成, 联系电话: 13585236561"
                    android:textColor="@color/current_text"
                    android:textSize="@dimen/current_text_size" />

                <TextView
                    android:id="@+id/tv_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/second_margintop"
                    android:text="2016—9-30 16:30"
                    android:textColor="@color/current_text"
                    android:textSize="@dimen/current_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_line_height"
        android:background="@color/line_bottom_color" />

</LinearLayout>
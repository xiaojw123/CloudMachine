<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloudm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_title_height" >

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/public_layout_padding_left"
            android:paddingRight="@dimen/public_layout_padding_left" >

            <TextView
                style="@style/login_left_text"
                android:text="@string/common_cancel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/public_layout_padding_left"
            android:paddingRight="@dimen/public_layout_padding_left" >

            <TextView
                style="@style/login_left_text"
                android:text="@string/login_title_right"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            style="@style/login_mid_text"
            android:layout_centerInParent="true"
            android:text="@string/login_title" />
    </RelativeLayout>

    <com.cloudmachine.autolayout.widgets.CircleTextImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/login_image_wh"
        android:layout_height="@dimen/login_image_wh" 
        android:layout_marginTop="@dimen/login_image_to_title"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_image"
        />
<LinearLayout 
    android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:layout_marginTop="@dimen/public_layout_padding_left"
    >
    <ImageView 
        android:layout_width="@dimen/login_icon_wh"
        android:layout_height="@dimen/login_icon_wh"
        android:background="@drawable/login_icon1"
        android:layout_marginLeft="@dimen/public_layout_padding_left"
        android:layout_marginRight="@dimen/public_layout_padding_left"
        android:layout_gravity="center_vertical"
        />
    <com.cloudmachine.utils.widgets.ClearEditTextView
                        android:id="@+id/username_ed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入手机号码"
                        android:textColor="@color/black"
                        android:textColorHint="@color/login_hint_text"
                        android:textSize="@dimen/public_textsize1" 
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        />
</LinearLayout>
<LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    />
<LinearLayout 
    android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:layout_marginTop="@dimen/public_layout_padding_left"
    >
    <ImageView 
        android:layout_width="@dimen/login_icon_wh"
        android:layout_height="@dimen/login_icon_wh"
        android:background="@drawable/login_icon2"
        android:layout_marginLeft="@dimen/public_layout_padding_left"
        android:layout_marginRight="@dimen/public_layout_padding_left"
        android:layout_gravity="center_vertical"
        />
    <com.cloudmachine.utils.widgets.ClearEditTextView
                        android:id="@+id/password_ed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="#c7c7c7"
                        android:textSize="@dimen/public_textsize1" 
                        android:layout_gravity="center_vertical" 
                        android:layout_marginRight="@dimen/public_layout_padding_left"
                        />
</LinearLayout>
<LinearLayout
                    style="@style/line_layout"
                    android:layout_marginLeft="@dimen/public_layout_padding_left"
                    />
<com.cloudmachine.autolayout.widgets.RadiusButtonView
			        android:id="@+id/login_btn"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/novice_guide_button_height"
			        android:layout_gravity="center_horizontal"
			        cloudm:rbtn_strokeColor="@color/public_blue_bg"
			        cloudm:rbtn_fillColor_nm="@color/public_blue_bg"
			        cloudm:rbtn_fillColor_dw="@color/public_b_20"
			        cloudm:rbtn_text="@string/login_title"
			        cloudm:rbtn_textColor="@color/public_white"
			        cloudm:rbtn_textSize="@dimen/about_button_textsize" 
			        android:layout_marginLeft="@dimen/public_layout_padding_left"
			        android:layout_marginRight="@dimen/public_layout_padding_left"
			        android:layout_marginTop="@dimen/public_layout_padding_left"
			        />
    <TextView
                android:id="@+id/forget_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/fault_ditails_abnormal_image_wh"
                android:text="忘记密码?"
                android:textColor="@drawable/bg_text_login_forget"
                android:textSize="@dimen/public_textsize2" >
            </TextView>
    

</LinearLayout>
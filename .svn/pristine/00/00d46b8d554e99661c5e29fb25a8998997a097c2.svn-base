<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    >
    <LinearLayout 
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guide_image_bg_height"
        android:background="@color/public_blue_bg"
        android:gravity="center"
        >
        <ImageView 
        android:layout_width="@dimen/guide_image_guide1_width"
        android:layout_height="@dimen/guide_image_guide1_height"
        android:background="@drawable/guide_iamge1"
        />
    </LinearLayout>
    <ImageView 
        android:layout_width="@dimen/guide_image_text1_width"
        android:layout_height="@dimen/guide_image_text1_height"
        android:layout_below="@id/image_layout"
        android:background="@drawable/guide_text1"
        android:layout_marginTop="@dimen/guide_text_marginTop"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/guide_dot_marginBottom"
        android:layout_centerHorizontal="true"
        >
        <ImageView 
            android:layout_width="@dimen/guide_dot_diameter"
        	android:layout_height="@dimen/guide_dot_diameter"
        	android:background="@drawable/guide_dot_dw"
            />
        <ImageView 
            android:layout_width="@dimen/guide_dot_diameter"
        	android:layout_height="@dimen/guide_dot_diameter"
        	android:background="@drawable/guide_dot_nm"
        	android:layout_marginLeft="@dimen/guide_dot_padding"
            />
        <ImageView 
            android:layout_width="@dimen/guide_dot_diameter"
        	android:layout_height="@dimen/guide_dot_diameter"
        	android:background="@drawable/guide_dot_nm"
        	android:layout_marginLeft="@dimen/guide_dot_padding"
            />
        <ImageView 
            android:layout_width="@dimen/guide_dot_diameter"
        	android:layout_height="@dimen/guide_dot_diameter"
        	android:background="@drawable/guide_dot_nm"
        	android:layout_marginLeft="@dimen/guide_dot_padding"
            />
    </LinearLayout>
	
</RelativeLayout>

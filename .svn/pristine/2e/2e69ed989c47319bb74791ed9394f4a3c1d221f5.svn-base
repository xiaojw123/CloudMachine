    <TextView 
      android:layout_width="match_parent"
      android:layout_height="@dimen/common_line_height"
      android:background="@color/mc_line"
      android:layout_marginTop="@dimen/common_view_gap"
      />
     <com.cloudmachine.utils.widgets.AddDeviceItemView
                android:id="@+id/licence_number"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="标示贴编号"
		    	cloudm:content="点击扫一扫"
		    	cloudm:edit="false"
		    	cloudm:last="true"
		    	
                ></com.cloudmachine.utils.widgets.AddDeviceItemView>
   <FrameLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout 
           android:id="@+id/no_licence_layout"
           android:layout_width="match_parent"
       	   android:layout_height="match_parent"
       	   android:paddingLeft="@dimen/common_view_gap"
       	   android:paddingRight="@dimen/common_view_gap"
       	   android:paddingTop="@dimen/common_top_gap"
       	   android:paddingBottom="@dimen/common_view_gap"
       	   android:orientation="vertical"
       	   android:visibility="gone"
           >
           <TextView 
               android:id="@+id/no_licence_text"
               android:layout_width="match_parent"
       	       android:layout_height="wrap_content"
       	       android:textColor="@color/common_grey"
       	       android:textSize="13dp"
       	       android:text="绑定车牌：请在云机械智能套件盒里找出车牌卡片（下方示意图），并扫描条形码绑定车牌成功后才可添加传感器。"              
       	       />
           <TextView 
               android:layout_width="wrap_content"
       	       android:layout_height="wrap_content"
       	       android:textColor="@color/common_grey"
       	       android:textSize="17dp"
       	       android:text="车牌卡片示意图"   
       	       android:layout_gravity="center_horizontal"
       	       android:layout_marginTop="30dp"
               />
           <ImageView 
               android:layout_width="wrap_content"
       	       android:layout_height="wrap_content"
       	       android:layout_gravity="center_horizontal"
       	       android:layout_marginTop="5dp"
       	       android:background="@drawable/mc_licence"
               />
       </LinearLayout>
       <LinearLayout 
           android:id="@+id/have_licence_layout"
           android:layout_width="match_parent"
       	   android:layout_height="match_parent"
       	   android:orientation="vertical"
           >
          
           <com.cloudmachine.utils.widgets.AddDeviceItemView
                android:id="@+id/filt_number"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	cloudm:name="网关编号"
		    	cloudm:content="点击扫一扫"
		    	cloudm:edit="false"
		    	cloudm:last="true"
                ></com.cloudmachine.utils.widgets.AddDeviceItemView>
           <TextView 
               android:id="@+id/no_sensor_text"
               android:layout_width="match_parent"
       	   	   android:layout_height="match_parent"
       	   	   android:paddingLeft="@dimen/common_view_gap"
       	   	   android:paddingRight="@dimen/common_view_gap"
       	       android:paddingTop="@dimen/common_top_gap"
       	       android:textColor="@color/common_grey"
       	       android:textSize="14dp"
       	       android:text="你还没有添加传感器，点击上方的扫一扫，扫描传感器上的条形码，即可快速添加传感器信息。安装成功后即可远程获取你的机器数据了。"
               android:visibility="gone"
               />
           <TextView 
               android:layout_width="match_parent"
       	   	   android:layout_height="wrap_content"
       	   	   android:text="传感器列表(可点击下方“+”添加)"
       	   	   android:layout_marginTop="@dimen/common_view_gap"
       	   	   style="@style/TextView.Meter_Text2"
       	   	   android:paddingLeft="@dimen/common_view_gap"
               />
           <TextView 
               android:layout_width="match_parent"
		        android:layout_height="@dimen/common_line_height"
		        android:background="@color/mc_line"
               />
           <ListView
		        android:id="@+id/sensor_listview"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:dividerHeight="0dp"
		        android:divider="@color/mc_line"
		        />
       </LinearLayout>
   </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_title_height"
    android:background="@color/public_title_color"
    android:padding="0dp" 
    >
    
	<RelativeLayout 
	    android:id="@+id/left_layout"
	    android:layout_width="wrap_content"
        android:layout_height="@dimen/public_title_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/public_title_margin"
	    >
	    <ImageView
            android:id="@+id/title_left_button"
            android:layout_width="@dimen/public_title_left_imagesize"
            android:layout_height="@dimen/public_title_left_imagesize"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/title_left_image_selector"
            />
        <TextView 
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_left_button"
            android:id="@+id/title_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/title_textcolor_selector"
            android:visibility="visible"
            android:gravity="center"
            android:layout_marginLeft="@dimen/leftmargin1"
            />
	</RelativeLayout>
        
	<RelativeLayout 
	    android:id="@+id/right_layout"
	    android:layout_width="@dimen/common_title_left_layout"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/public_title_margin"
        android:layout_centerVertical="true"
	    >
        <ImageView
            android:id="@+id/title_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/mc_arrow_r"
            />
		<TextView 
		    android:id="@+id/title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basicinfo"
            android:textColor="@color/title_textcolor_selector"
            android:visibility="visible"
            android:gravity="center"
            android:textSize="@dimen/public_title_left_textsize"
            android:layout_centerVertical="true"
		    />
		<TextView 
		    android:id="@+id/title_right_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@drawable/mc_title_dw"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="@dimen/title_right_textsize"
		    />
        </RelativeLayout>
        
         
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            >
            <TextView 
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/title_experience_machine"
            	android:textColor="@color/public_title_textcolor"
            	android:textSize="@dimen/public_title_center_textsize"
                />
            
            <TextView 
                android:id="@+id/title_name_remarks"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text=""
            	android:textColor="#f0eff5"
            	android:textSize="@dimen/common_title_textsize"
            	android:visibility="gone"
            	android:layout_marginLeft="@dimen/common_view_min_gap"
                />
            
            
        </LinearLayout>
</RelativeLayout>
